<?xml version="1.0" encoding="utf-8"?>
<sample>

  <title lang="en">Password verification using salted Grøstl-256</title>
  <summary lang="en">Password verification using Grøstl-256 and a salt</summary>
  <description lang="en">This template shows how to verify a password using a salted Grøstl-256 hash.</description>
  <keywords>Grøstl, Groestl, Grostl, Gröstl, hash, password, verification, salt</keywords>

  <title lang="de">Passwort-Verifizierung mittels Salted Grøstl-256</title>
  <summary lang="de">Verifizierung eines Passwortes mittels Grøstl-256 und Salt-Wert</summary>
  <description lang="de">Diese Vorlage zeigt, wie ein gespeichertes Passwort mittels Grøstl-256-Hash verifiziert wird.</description>
  <keywords lang="de">Grøstl, Groestl, Grostl, Gröstl, hash, passwort, überprüfung, verifikation, salt, salz</keywords>

  <!-- Icon by: http://p.yusukekamiyamane.com -->
  <icon file="Password_verification_salted_Grøstl.png" />
  <relevantPlugins>
    <plugin name="Groestl" />
  </relevantPlugins>

  <replacements lang="de">
    <replacement key="$Entered password$" value="Eingegebenes Passwort"/>
    <replacement key="$Stored hash$" value="Gespeicherter Hashwert"/>
    <replacement key="$Stored salt$" value="Gespeicherter Salt"/>
    <replacement key="$Concatenate$" value="Konkatenation"/>
    <replacement key="$String Decoder$" value="String-Kodierer"/>
    <replacement key="$Converter$" value="Konvertierer"/>
    <replacement key="$Comparator$" value="Vergleicher"/>
    <replacement key="$Password accepted?$" value="Passwort akkzeptiert?"/>
    <replacement key="$memo$" value="Datenbankeintrag des Benutzers"/>
	 
  </replacements>
  <replacements lang="en">
    <replacement key="$Entered password$" value="Entered password"/>
    <replacement key="$Stored hash$" value="Stored hash"/>
    <replacement key="$Stored salt$" value="Stored salt"/>
    <replacement key="$Concatenate$" value="Concatenate"/>
    <replacement key="$String Decoder$" value="String Decoder"/>
    <replacement key="$Converter$" value="Converter"/>
    <replacement key="$Comparator$" value="Comparator"/>
    <replacement key="$Password accepted?$" value="Password accepted?"/>
    <replacement key="$memo$" value="User's database record"/>
  </replacements>

