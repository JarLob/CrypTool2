<?xml version="1.0" encoding="utf-8"?>
<sample>

  <title lang="en">Password verification using salted SHA-1</title>
  <summary lang="en">Verifies a password using SHA-1 and salt</summary>
  <description lang="en">This template shows how a password is verified on a computer using a salted SHA-1 hash.</description>
  <keywords>SHA, Password, Salt, Storage, Verification</keywords>

  <title lang="de">Passwort-Verifizierung mittels Salted SHA-1</title>
  <summary lang="de">Verifizierung eines Passwortes mittels SHA-1 und Salt-Wert</summary>
  <description lang="de">Diese Vorlage zeigt, wie ein gespeichertes Passwort auf einem Computer mittels SHA-1-Hash verifiziert wird.</description>
  <keywords lang="de">Hash</keywords>

  <icon file="Password_verify_salted_SHA" />
  <relevantPlugins>
    <plugin name="SHA-1" />
  </relevantPlugins>

  <replacements lang="de">
    <replacement key="$Enter password$" value="Eingabe des Passwortes"/>
    <replacement key="$Concatenate$" value="Konkatenation"/>
    <replacement key="$Comparator$" value="Vergleicher"/>
    <replacement key="$Password accepted?$" value="Passwort akkzeptiert?"/>
    <replacement key="$Password storage$" value="Passwortspeicher"/>
    <replacement key="$Salted hash$" value="Salted Hashwert"/>
    <replacement key="$Stored salt$" value="Gespeicherter Salt"/>
    <replacement key="$Stored hash$" value="Gespeicherter Hashwert"/>
    <replacement key="$Extract the salt$" value="Salt extrahieren"/>
    <replacement key="$String Decoder$" value="String-Kodierer"/>
    <replacement key="$Converter$" value="Konvertierer"/>
    <replacement key="$Array Indexer$" value="Array-Indizierer"/>
    <replacement key="$Substring$" value="Teilstring"/>
    <replacement key="$End$" value="Ende"/>
    <replacement key="$skip$" value="{SSHA} überspringen"/>
    <replacement key="$memo$" value="This template shows how your computer internally verifies your entered password without actually storing the password."/>
  </replacements>
  <replacements lang="en">
    <replacement key="$Enter password$" value="Enter password"/>
    <replacement key="$Concatenate$" value="Concatenate"/>
