<?xml version="1.0" encoding="utf-8"?>
<sample>

  <title lang="en">Take a Picture</title>
  <summary lang="en">Take a Picture</summary>
  <description lang="en">This template shows how to take a picture with the camera component (e.g. for scanning a QR code).</description>
  <keywords>picture, photo, camera</keywords>

  <title lang="de">Foto erstellen</title>
  <summary lang="de">Ein Foto erstellen</summary>
  <description lang="de">Diese Vorlage zeigt das Erstellen eines Fotos mittels der Kamerakomponente (z.B. um einen QR-Code zu scannen).</description>
  <keywords lang="de">kamera, foto</keywords>

  <icon file="TakePicture.png" />
  <relevantPlugins>
    <plugin name="BooleanInput" />
    <plugin name="PictureOutput" />
    <plugin name="Webcam" />
  </relevantPlugins>

  <replacements lang="de">
    <replacement key="$Take Picture$" value="Bild aufnehmen"/>
    <replacement key="$Camera$" value="Kamera"/>
    <replacement key="$Picture Output$" value="Bildausgabe"/>
  </replacements>
  <replacements lang="en">
    <replacement key="$Take Picture$" value="Take Picture"/>
    <replacement key="$Camera$" value="Camera"/>
    <replacement key="$Picture Output$" value="Picture Output"/>
  </replacements>

</sample>
