<sample>

  <title lang="en">Paillier Cipher (Number Input)</title>
  <summary lang="en">Usage of the <i>Pailler</i> cipher with number input</summary>
  <description lang="en">This template shows the usage of the <i>Pailler</i> cipher with numbers.</description>
  <keywords>homomorphic, Damgard, Eurocrypt, Jurik, Paillier, asymmetric</keywords>

  <title lang="de">Paillier-Chiffre (Zahleneingabe)</title>
  <summary lang="de">Benutzung der <i>Paillier</i>-Chiffre mit Zahleneingabe</summary>
  <description lang="de">Diese Vorlage zeigt die Benutzung der <i>Paillier</i>-Chiffre mit Zahlen.</description>
  <keywords lang="de">homomorph, asymmetrisch</keywords>

  <icon file="Paillier.png" />

  <relevantPlugins>
    <plugin name="BooleanOutput" />
    <plugin name="Comparators" />
    <plugin name="Paillier" />
    <plugin name="PaillierKeyGenerator" />
  </relevantPlugins>

  <replacements lang="de">
    <replacement key="$KeyGenerator$" value="Schlüsselgenerator"/>
    <replacement key="$Encrypt$" value="Verschlüsselung"/>
    <replacement key="$Decrypt$" value="Entschlüsselung"/>
    <replacement key="$TextOutput$" value="Textausgabe"/>
    <replacement key="$BooleanOutput$" value="Boolesche Ausgabe"/>
    <replacement key="$Comparator$" value="Vergleicher"/>
    <replacement key="$Input$" value="Eingabe"/>
  </replacements>
  <replacements lang="en">
    <replacement key="$KeyGenerator$" value="KeyGenerator"/>
    <replacement key="$Encrypt$" value="Encrypt"/>
    <replacement key="$Decrypt$" value="Decrypt"/>
    <replacement key="$TextOutput$" value="TextOutput"/>
    <replacement key="$BooleanOutput$" value="BooleanOutput"/>
    <replacement key="$Comparator$" value="Comparator"/>
    <replacement key="$Input$" value="Input"/>
  </replacements>

