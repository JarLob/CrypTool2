<?xml version="1.0" encoding="utf-8"?>
<sample>

  <title lang="en">DES Visualization</title>
  <summary lang="en">Visualization of the DES encryption process</summary>
  <description lang="en">With this template you can look at the encryption process of the Data Encryption Standard step by step.</description>
  <keywords>advanced, modern, cipher, encryption, Lucifer, symmetric, nist, visualisation, DES</keywords>

  <title lang="de">DES-Visualisierung</title>
  <summary lang="en">Visualisierung der DES-Verschlüsselung</summary>
  <description lang="de">Mit dieser Vorlage können Sie sich den Verschlüsselungsprozess des Data Encryption Standards schrittweise anschauen.</description>
  <keywords lang="de">symmetrisch, modern, Blockchiffre, Verschlüsselung, Lucifer, Visualisierung, DES</keywords>

  <icon file="DESVisualisation.png" />

  <relevantPlugins>
    <plugin name="DESVisualisation" />
  </relevantPlugins>

  <replacements lang="de">
    <replacement value="Klartext (Hex Werte)" key="$Text$"/>
    <replacement value="Chiffretext  (Hex Werte)" key="$Ciphertext$"/>
    <replacement value="Schlüssel  (Hex Werte)" key="$Key$"/>
    <replacement value="Text-Decodierer" key="$TextDecoder$"/>
    <replacement value="Schlüssel-Decodierer" key="$KeyDecoder$"/>
    <replacement value="Ausgabe-Codierer" key="$OutputEncoder$"/>
    <replacement value="Data Encryption Standard Visualisierung" key="$DESVisualisation$"/>
  </replacements>
  <replacements lang="en">
    <replacement value="Plaintext (Hex values)" key="$Text$"/>
    <replacement value="Ciphertext (Hex values)" key="$Ciphertext$"/>
    <replacement value="Key (Hex values)" key="$Key$"/>
    <replacement value="Text-Decoder" key="$TextDecoder$"/>
    <replacement value="Key-Decoder" key="$KeyDecoder$"/>
    <replacement value="Output-Encoder" key="$OutputEncoder$"/>
    <replacement value="Data Encryption Standard Visualization" key="$DESVisualisation$"/>
  </replacements>

