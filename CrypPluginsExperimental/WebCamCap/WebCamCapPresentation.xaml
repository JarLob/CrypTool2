<UserControl x:Class="WebCamCap.WebCamCapPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:webcam="clr-namespace:Cryptool.Plugins.WebCamCap" xmlns:local="clr-namespace:WebCamCap"

             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <webcam:ThreeFourthConverter x:Key="ThreeFourthConverter" />
    </UserControl.Resources>
    <Grid>

     

     <!-- Webcamp preview -->
        <webcam:CapPlayer x:Name="webcamPlayer"
                          Rotation="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:WebCamCapPresentation}}, Path=WebcamRotation}"
                          Device="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:WebCamCapPresentation}}, Path=SelectedWebcam}" Stretch="Fill">
        </webcam:CapPlayer>
    </Grid>
</UserControl>
