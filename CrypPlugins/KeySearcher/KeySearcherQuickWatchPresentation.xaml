<UserControl x:Class="KeySearcher.KeySearcherQuickWatchPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="180" MinWidth="250" Width="AUTO" Height="AUTO">
    <Grid Background="White" Height="AUTO" Width="AUTO">
        <Grid.RowDefinitions>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" FontSize="10" Background="White" VerticalAlignment="Top" Height="28" Width="AUTO">Probable time left :</Label>
        <Label Grid.Row="0" Grid.Column="1" FontSize="10" Background="White" VerticalAlignment="Top" Height="28" Width="AUTO">Estimated end time :</Label>

        <TextBox Name="timeLeft" Grid.Row="1" Grid.Column="0" 
                 TextAlignment="Center" IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Height="28"/>
        <TextBox Name="endTime" Grid.Row="1" Grid.Column="1" 
                 TextAlignment="Center" IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Height="28"/>

        <Label Grid.Row="2" Grid.Column="0" FontSize="10" Grid.ColumnSpan="1" Background="White" Width="AUTO">Keys per second :</Label>

        <TextBox x:Name="keysPerSecond" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                 TextAlignment="Left"  IsReadOnly="True" TextWrapping="WrapWithOverflow"/>
        <!--
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">-->
            <ListBox Name="listbox" Grid.ColumnSpan="2" Grid.Row="4" />
        <!--</ScrollViewer>-->
    </Grid>
</UserControl>
