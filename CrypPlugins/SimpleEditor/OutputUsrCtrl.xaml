<UserControl x:Class="SimpleEditor.OutputUsrCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid>
        <GroupBox Name="mainGroupBox">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <RadioButton Name="radioButtonString" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0" Content="String" IsChecked="True" Click="RadioButton_Checked"/>
                <TextBox Name="textBoxString" Margin="5,5,5,5" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"/>
                <RadioButton Name="radioButtonFile" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1" Content="File" Click="RadioButton_Checked_1"/>
                <TextBox Name="textBoxFile" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1" IsEnabled="False"/>
                <Button Content="...." Name="buttonFile" Margin="5,5,5,5" Grid.Column="2" Grid.Row="1" IsEnabled="False" Click="buttonFile_Click" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
