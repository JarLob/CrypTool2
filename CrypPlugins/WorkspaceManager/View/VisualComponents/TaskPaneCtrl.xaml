<UserControl x:Class="WorkspaceManager.View.VisualComponents.TaskPaneCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    Height="313" Width="667">

    <StackPanel Name="navPaneSettings" Orientation="Vertical" Visibility="Visible">

        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Name="stackPanelContent" CanVerticallyScroll="True" CanHorizontallyScroll="True" >
                    </StackPanel>
                    <TextBox  Name="textBoxTooltip" IsReadOnly="True" FontWeight="Bold" BorderBrush="Transparent" TextWrapping="Wrap"></TextBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </StackPanel>

</UserControl>

