<UserControl x:Class="WorkspaceManager.WorkspaceManagerSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Properties="clr-namespace:Cryptool.PluginBase.Properties;assembly=CrypPluginBase"
             mc:Ignorable="d" d:DesignHeight="490" d:DesignWidth="632" DataContext="{Binding}">
    <Grid>
        <Image Source="/WorkspaceManager;component/View/Image/WorkspaceManagerIcon_orig.png" Opacity="0.2" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Margin="20">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource ResourceKey=settingsStyle}" ToolTip="{Loc GUIUpdateinterval_Tooltip}" Height="25" Content="{Loc GUIUpdateinterval_Label}"/>
                <TextBox Grid.Row="0" Grid.Column="2" Style="{StaticResource ResourceKey=settingsStyle}" ToolTip="{Loc GUIUpdateinterval_Tooltip}" Height="25" Width="100" HorizontalAlignment="Left" Name="GuiUpdateInterval" Text="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_GuiUpdateInterval, Mode=TwoWay}" IsEnabled="False" />
                <Slider Width="200" Grid.Row="0" Grid.Column="1" ToolTip="{Loc GUIUpdateinterval_Tooltip}" Value="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_GuiUpdateInterval, Mode=TwoWay}" Minimum="1" Maximum="500" IsSnapToTickEnabled="True" />
                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource ResourceKey=settingsStyle}" ToolTip="{Loc SleepTime_Tooltip}" Height="25" Content="{Loc SleepTime_Label}"/>
                <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource ResourceKey=settingsStyle}" ToolTip="{Loc SleepTime_Tooltip}" Height="25" Width="100" HorizontalAlignment="Left" Name="SleepTime"  Text="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_SleepTime, Mode=TwoWay}" IsEnabled="False" />
                <Slider Width="200" Grid.Row="1" Grid.Column="1" ToolTip="{Loc SleepTime_Tooltip}" Value="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_SleepTime, Mode=TwoWay}" Minimum="0" Maximum="5000" IsSnapToTickEnabled="True" />
                <CheckBox Grid.Row="4" Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc SynchronousEvents_Label}" Name="SynchronousEvents" ToolTip="{Loc SynchronousEvents_Tooltip}" Height="21" IsChecked="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_SynchronousEvents, Mode=TwoWay}" />
                <CheckBox Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Benchmark_Label}" Height="21" Name="BenchmarkPlugins" ToolTip="{Loc Benchmark_Tooltip}" IsChecked="{Binding Source={x:Static Properties:Settings.Default}, Path=WorkspaceManager_BenchmarkPlugins, Mode=TwoWay}"/>

                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Datatypecolors_Label}" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left"/>

                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Integer:" Grid.Row="7" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="IntegerColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Byte:" Grid.Row="8" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="ByteColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Double:" Grid.Row="9" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="DoubleColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Bool:" Grid.Row="10" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="BoolColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Stream:" Grid.Row="11" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="StreamColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="String:" Grid.Row="12" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="StringColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Object:" Grid.Row="13" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="ObjectColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="BigInteger:" Grid.Row="14" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="14" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="BigIntegerColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="Default:" Grid.Row="15" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="15" Grid.Column="1" HorizontalAlignment="Left">
                    <Rectangle Name="DefaultColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>

                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Functioncolors_Label}" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Left"/>

                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Asymmetric_Label}" Grid.Row="7" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="7" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="AsymmetricColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Classic_Label}" Grid.Row="8" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="8" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="ClassicColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Symmetricblock_Label}" Grid.Row="9" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="9" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="SymmetricColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Tools_Label}" Grid.Row="10" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="10" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="ToolsColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Hash_Label}" Grid.Row="11" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="11" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="HashColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc AnalysisGeneric_Label}" Grid.Row="12" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="12" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="AnalysisGenericColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc AnalysisSpecific_Label}" Grid.Row="13" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="13" Grid.Column="4" HorizontalAlignment="Left">
                    <Rectangle Name="AnalysisSpecificColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Steganography_Label}" Grid.Row="14" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="14" Grid.Column="4" HorizontalAlignment="Left">
                  <Rectangle Name="SteganographyColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>
                <Label Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc Protocols_Label}" Grid.Row="15" Grid.Column="3" Height="26"  HorizontalAlignment="Left"/>
                <Border Style="{StaticResource ResourceKey=settingsStyle}" Margin="0,0,0,2" BorderThickness="1" BorderBrush="Gray" Width="26" Height="26" Grid.Row="15" Grid.Column="4" HorizontalAlignment="Left">
                  <Rectangle Name="ProtocolColor" Width="25" Height="25" MouseLeftButtonDown="Rectangle_MouseDown"/>
                </Border>

                <Button Click="ResetColorButton_Click" Width="133" Height="25" Margin="2,2,198,2" Grid.Row="16" Style="{StaticResource ResourceKey=settingsStyle}" Content="{Loc ResetColors_Label}" ToolTip="{Loc ResetColors_Tooltip}" Grid.ColumnSpan="2" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
