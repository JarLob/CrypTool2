<!ELEMENT category (name*, description*, headline*, task*, (category|input|sampleViewer|loadSample|file)*) >
<!ATTLIST category 
   image	CDATA #IMPLIED
>

<!ELEMENT input (name*, description*, headline*, task*, (inputBox|comboBox|checkBox|keyTextBox)*, (category|input|sampleViewer|loadSample|file)?) >
<!ATTLIST input 
   image	CDATA #IMPLIED
>

<!ELEMENT sampleViewer (name*, description*, headline*, task*, (inputBox|comboBox|checkBox|keyTextBox|outputBox|progressBar|presentation)*) >
<!ATTLIST sampleViewer 
   image	CDATA 	#IMPLIED
   file		CDATA       #REQUIRED
   showCreateButton		CDATA       #IMPLIED
>

<!ELEMENT loadSample (name*, description*) >
<!ATTLIST loadSample 
   file		CDATA       #REQUIRED
   title	CDATA       #REQUIRED
>

<!ELEMENT file EMPTY >
<!ATTLIST file 
   resource	CDATA       #REQUIRED
>

<!ELEMENT name (#PCDATA) >
<!ATTLIST name 
   lang	CDATA       "en"
>

<!ELEMENT description (#PCDATA) >
<!ATTLIST description 
   lang	CDATA       "en"
>

<!ELEMENT headline (#PCDATA) >
<!ATTLIST headline 
   lang	CDATA       "en"
>

<!ELEMENT task (#PCDATA) >
<!ATTLIST task 
   lang	CDATA       "en"
>

<!ELEMENT inputBox (description+, defaultvalue*) >
<!ATTLIST inputBox 
   plugin		CDATA       #REQUIRED
   property		CDATA       #REQUIRED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
   visibleLines	CDATA       #IMPLIED
   regex		CDATA       #IMPLIED
>

<!ELEMENT outputBox (description+) >
<!ATTLIST outputBox 
   plugin		CDATA       #REQUIRED
   property		CDATA       #REQUIRED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
   visibleLines	CDATA       #IMPLIED
>

<!ELEMENT presentation (description+) >
<!ATTLIST presentation 
   plugin		CDATA       #REQUIRED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   height		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
>

<!ELEMENT comboBox (description+, item+) >
<!ATTLIST comboBox 
   plugin		CDATA       #REQUIRED
   property		CDATA       #REQUIRED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
   defaultValue	CDATA       #IMPLIED
>

<!ELEMENT checkBox (description+, content+) >
<!ATTLIST checkBox 
   plugin		CDATA       #REQUIRED
   property		CDATA       #REQUIRED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
   defaultValue	CDATA       #IMPLIED
>

<!ELEMENT keyTextBox (description+) >
<!ATTLIST keyTextBox 
   plugin		CDATA       #REQUIRED
   property		CDATA       #REQUIRED
   format		CDATA       #REQUIRED
   defaultkey		CDATA       #IMPLIED
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
>

<!ELEMENT progressBar (description+) >
<!ATTLIST progressBar
   plugin		CDATA       #REQUIRED   
   alignment	CDATA       #IMPLIED
   width		CDATA       #IMPLIED
   group		CDATA       #IMPLIED
>

<!ELEMENT item EMPTY >
<!ATTLIST item 
   content	CDATA       #REQUIRED
   lang	CDATA       "en"
>

<!ELEMENT content (#PCDATA) >
<!ATTLIST content 
   lang	CDATA       "en"
>
<!ELEMENT defaultvalue (#PCDATA) >
<!ATTLIST defaultvalue 
   lang	CDATA       "en"
>
