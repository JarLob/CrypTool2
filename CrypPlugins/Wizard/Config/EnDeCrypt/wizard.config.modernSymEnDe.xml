<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE category SYSTEM "..\wizard.dtd">

<!-- This is the XML file defining the modern symmetric encryption/decryption categories a user can select from. -->
<category image="Sym">
  
  <name lang="en" >Symmetric Encryption/Decryption</name>
  <description lang="en" >
    Select a symmetric modern algorithm to encrypt plaintext or to decrypt ciphertext.
  </description>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en" >Algorithm Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en" >Select a modern symmetric encryption/decryption algorithm.</desc>

  <!-- AES input -->
  <input image="AES" >
    <name lang="en" >AES</name>
    <description lang="en" >The Advanced Encryption Standard (AES) is a symmetric-key encryption standard adopted by the U.S. government. The standard comprises three block ciphers, AES-128, AES-192 and AES-256, adopted from a larger collection originally published as Rijndael.</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt:</description>
      <defaultvalue>Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[0-9A-F]+">
      <description lang="en">Key:</description>
      <defaultvalue>A1B1C11111111111</defaultvalue>
    </inputBox>

    <comboBox plugin="AES" property="Mode" defaultValue="0" group="properties">
      <description lang="en">Chaining mode:</description>
      <item content="Electronic Code Book (ECB)" lang="en"/>
      <item content="Cipher Block Chaining (CBC)" lang="en"/>
      <item content="Cipher Feedback (CFB)" lang="en"/>
    </comboBox>

    <comboBox plugin="AES" property="Keysize" defaultValue="0" group="properties">
      <description lang="en">Keysize:</description>
      <item content="128 Bits"/>
      <item content="192 Bits"/>
      <item content="256 Bits"/>
    </comboBox>

    <sampleViewer image="AES" file="WorkspaceManagerSamples\AES_Sample.cwm">
      <name lang="en" >AES Output</name>
      <description lang="en" >The Advanced Encryption Standard (AES) is a symmetric-key encryption standard adopted by the U.S. government. The standard comprises three block ciphers, AES-128, AES-192 and AES-256, adopted from a larger collection originally published as Rijndael.</description>

      <headline lang="en" >AES Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
      </inputBox>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
  </input>

  <!-- DES input -->
  <input image="DES" >
    <name lang="en" >DES</name>
    <description lang="en" >The Data Encryption Standard (DES) is a block cipher that uses shared secret encryption.</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt:</description>
      <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F][0-9A-F]">
      <description lang="en">Key:</description>
      <defaultvalue>A1B1C11111111111</defaultvalue>
    </inputBox>

    <comboBox plugin="DES" property="Mode" defaultValue="0" alignment="Left">
      <description lang="en">Chaining mode:</description>
      <item content="Electronic Code Book (ECB)" lang="en"/>
      <item content="Cipher Block Chaining (CBC)" lang="en"/>
      <item content="Cipher Feedback (CFB)" lang="en"/>
    </comboBox>

    <sampleViewer image="DES" file="WorkspaceManagerSamples\DES_Sample.cwm">
      <name lang="en" >DES Output</name>
      <description lang="en" >The Data Encryption Standard (DES) is a block cipher that uses shared secret encryption.</description>

      <headline lang="en" >DES Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
      </inputBox>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
  </input>

  <!-- SDES input -->
  <input image="SDES" >
    <name lang="en" >SDES</name>
    <description lang="en" >SDES or Simple DES is a simpler form of DES (Data Encryption Standard).</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt:</description>
      <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[01][01][01][01][01][01][01][01][01][01]">
      <description lang="en">Key:</description>
      <defaultvalue>1010101010</defaultvalue>
    </inputBox>

    <comboBox plugin="SDES" property="Mode" defaultValue="1" alignment="Left">
      <description lang="en">Chaining mode:</description>
      <item content="Electronic Code Book (ECB)" lang="en"/>
      <item content="Cipher Block Chaining (CBC)" lang="en"/>
    </comboBox>

    <sampleViewer image="SDES" file="WorkspaceManagerSamples\SDES_Sample.cwm">
      <name lang="en" >SDES Output</name>
      <description lang="en" >SDES or Simple DES is a simpler form of DES (Data Encryption Standard).</description>

      <headline lang="en" >SDES Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
      </inputBox>

      <presentation plugin="SDES Encryption" alignment="Stretch" height="400" >
        <description lang="en">Encryption Presentation:</description>
      </presentation>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="output1">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="output1">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
  </input>

  <!-- Twofish input -->
  <input image="Twofish" >
    <name lang="en" >Twofish</name>
    <description lang="en" >Twofish is a symmetric key block cipher with a block size of 128 bits and key sizes up to 256 bits.</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt (must be multiple of 16):</description>
      <defaultvalue lang="en">Hallo Welt, fill</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[0-9A-F]+">
      <description lang="en">Key (in Hex):</description>
      <defaultvalue>A1B1C11111111111</defaultvalue>
    </inputBox>

    <comboBox plugin="Twofish Encryption;Twofish Decryption" property="KeySize" defaultValue="0" group="input1">
      <description lang="en">KeySize:</description>
      <item content="128 Bit"/>
      <item content="192 Bit"/>
      <item content="256 Bit"/>
    </comboBox>

    <comboBox plugin="Twofish Encryption;Twofish Decryption" property="Mode" defaultValue="0" group="input1">
      <description lang="en">Chaining mode:</description>
      <item content="Electronic Code Book (ECB)"/>
      <item content="Cipher Block Chaining (CBC)"/>
    </comboBox>

    <sampleViewer image="Twofish" file="WorkspaceManagerSamples\Twofish_Sample.cwm">
      <name lang="en" >Twofish Output</name>
      <description lang="en" >Twofish is a symmetric key block cipher with a block size of 128 bits and key sizes up to 256 bits.</description>

      <headline lang="en" >Twofish Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hello world! Hallo Welt! Hola mundo! Bonjour le monde!</defaultvalue>
      </inputBox>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
  </input>

  <!-- Trivium input -->
  <!--<input image="Trivium" >
    <name lang="en" >Trivium</name>
    <description lang="en" >
      Trivium is a symmetric modern algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>-->

  <!-- TEA input -->
  <input image="TEA" >
    <name lang="en" >TEA</name>
    <description lang="en" >The Tiny Encryption Algorithm (TEA) is a block cipher notable for its simplicity of description and implementation, typically a few lines of code.</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt:</description>
      <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[0-9A-F]+">
      <description lang="en">Key:</description>
      <defaultvalue>000102030405060708090A0B0C0D0E0F</defaultvalue>
    </inputBox>

    <comboBox plugin="TEA Encryption;TEA Decryption" property="Version" defaultValue="0" alignment="Left" >
      <description lang="en">TEA Version:</description>
      <item content="TEA (1994)"/>
      <item content="XTEA (1997)"/>
      <item content="XXTEA (1998)"/>
    </comboBox>

    <sampleViewer image="Twofish" file="WorkspaceManagerSamples\TEA_Sample.cwm">
      <name lang="en" >Twofish Output</name>
      <description lang="en" >The Tiny Encryption Algorithm (TEA) is a block cipher notable for its simplicity of description and implementation, typically a few lines of code.</description>

      <headline lang="en" >Message Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
      </inputBox>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
    
  </input>

  <!-- RC2 input -->
  <input image="RC2" >
    <name lang="en" >RC2</name>
    <description lang="en" >RC2 is a block cipher designed by Ron Rivest in 1987. "RC" stands for "Ron's Code" or "Rivest Cipher".</description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en">Here, you can input the message and the key to use.</desc>

    <inputBox plugin="Cleartext" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">Message to encrypt:</description>
      <defaultvalue lang="en">Hallo Welt, dies ist ein Test!</defaultvalue>
    </inputBox>

    <inputBox plugin="Key" property="Text" alignment="Right" width="20%" visibleLines="5" group="1" regex="[0-9A-F]+">
      <description lang="en">Key:</description>
      <defaultvalue lang="en">A1B1C11111111111</defaultvalue>
    </inputBox>

    <comboBox plugin="RC2 Encryption;RC2 Decryption" property="Mode" defaultValue="0" alignment="Left" >
      <description lang="en">Chaining mode:</description>
      <item content="Electronic Code Book (ECB)"/>
      <item content="Cipher Block Chaining (CBC)"/>
      <item content="Cipher Feedback (CFB)"/>
    </comboBox>

    <sampleViewer image="RC2" file="WorkspaceManagerSamples\RC2_Sample.cwm">
      <name lang="en" >RC2 Output</name>
      <description lang="en" >RC2 is a block cipher designed by Ron Rivest in 1987. "RC" stands for "Ron's Code" or "Rivest Cipher".</description>

      <headline lang="en" >Message Output</headline>
      <desc lang="en">Here, you can change the parameters and view the results.</desc>

      <inputBox plugin="Cleartext" property="Text" alignment="Stretch" visibleLines="5">
        <description lang="en">Message to encrypt:</description>
        <defaultvalue lang="en">Hallo Welt! Hello, world. Hola mundo. Bonjour le monde. Witaj świecie! 1234</defaultvalue>
      </inputBox>

      <outputBox plugin="Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Encryption Output:</description>
      </outputBox>

      <outputBox plugin="Deciphered Ciphertext" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
        <description lang="en">Decryption Output:</description>
      </outputBox>

    </sampleViewer>
  </input>

</category>
