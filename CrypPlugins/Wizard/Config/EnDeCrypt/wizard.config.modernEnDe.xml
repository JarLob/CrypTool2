<?xml version="1.0" encoding="utf-8" ?>

<!-- This is the XML file defining the modern encryption/decryption categories a user can select from. -->

<step>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en-US" >Key Type Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en-US" >Select symmetric or asymmetric encryption/decryption.</desc>

  <!-- Symmetric Encryption/Decryption Category -->
  <category id ="Sym" image="Sym">
    <name lang="en-US" >Symmetric Encryption/Decryption</name>
    <description lang="en-US" >
      Select a symmetric modern algorithm to encrypt plaintext or to decrypt ciphertext.
    </description>
    <file resource="Wizard.Config.EnDeCrypt.wizard.config.modernSymEnDe.xml" />
  </category>

  <!-- Asymmetric Encryption/Decryption Category -->
  <category id ="Asym" image="Asym">
    <name lang="en-US" >Asymmetric Encryption/Decryption</name>
    <description lang="en-US" >
      Select an asymmetric modern algorithm to encrypt plaintext or to decrypt ciphertext.
    </description>

    <!-- This is the step's headline. It should be short, but precise. -->
    <headline lang="en-US" >Algorithm Selection</headline>

    <!-- This is the step's description. -->
    <desc lang="en-US" >Select an asymmetric encryption/decryption algorithm.</desc>
    
    <!-- RSA Item -->
    <item id="RSA" image="RSA" >
      <name lang="en-US" >RSA</name>
      <description lang="en-US" >
        RSA is an asymmetric modern algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
      </description>
    </item>
  </category>

</step>
