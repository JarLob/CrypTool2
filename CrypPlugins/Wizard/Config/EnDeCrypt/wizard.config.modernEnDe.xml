<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE category SYSTEM "..\wizard.dtd">

<!-- This is the XML file defining the modern encryption/decryption categories a user can select from. -->
<category image="Modern">
  <name lang="en" >Modern Encryption/Decryption</name>
  <description lang="en" >
    Select a modern algorithm to encrypt plaintext or to decrypt ciphertext.
  </description>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en" >Key Type Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en" >Select symmetric or asymmetric encryption/decryption.</desc>

  <!-- Symmetric Encryption/Decryption Category -->
  <file resource="Wizard.Config.EnDeCrypt.wizard.config.modernSymEnDe.xml" />
  
  <!-- Asymmetric Encryption/Decryption Category -->
  <category image="Asym">
    <name lang="en" >Asymmetric Encryption/Decryption</name>
    <description lang="en" >
      Select an asymmetric modern algorithm to encrypt plaintext or to decrypt ciphertext.
    </description>

    <!-- This is the step's headline. It should be short, but precise. -->
    <headline lang="en" >Algorithm Selection</headline>

    <!-- This is the step's description. -->
    <desc lang="en" >Select an asymmetric encryption/decryption algorithm.</desc>
    
    <!-- RSA input -->
    <category image="RSA">
      <name lang="en">RSA</name>
      <description lang="en">RSA is an asymmetric modern algorithm to encrypt plaintext or to decrypt ciphertext.
In cryptography, RSA (which stands for Rivest, Shamir and Adleman who first publicly described it) is an algorithm for public-key cryptography.
It is the first algorithm known to be suitable for signing as well as encryption, and was one of the first great advances in public key cryptography.
RSA is widely used in electronic commerce protocols, and is believed to be secure given sufficiently long keys and the use of up-to-date implementations.</description>

      <headline lang="en">RSA</headline>
      <desc lang="en">Choose whether you want to use RSA for encryption or decryption</desc>
      
      <input image="RSA" >
        <name lang="en">RSA Encryption</name>
        <description lang="en">
          Select this, to use RSA for encryption.
        </description>

        <headline lang="en">RSA Encryption</headline>
        <desc lang="en">Input the public key and the message or number to encrypt here</desc>

        <inputBox plugin="N" property="Text" group="Key" width="20%">
          <description lang="en">N (common part of keypair):</description>
          <defaultvalue>299</defaultvalue>
        </inputBox>

        <inputBox plugin="e" property="Text" group="Key" width="20%">
          <description lang="en">e (public part of keypair):</description>
          <defaultvalue>23</defaultvalue>
        </inputBox>

        <inputBox plugin="Cleartext" property="Text" visibleLines="5" alignment="Left">
          <description lang="en">Text message to encrypt:</description>
          <defaultvalue lang="en">In cryptography, RSA (which stands for Rivest, Shamir and Adleman who first publicly described it) is an algorithm for public-key cryptography.[1] It is the first algorithm known to be suitable for signing as well as encryption, and was one of the first great advances in public key cryptography. RSA is widely used in electronic commerce protocols, and is believed to be secure given sufficiently long keys and the use of up-to-date implementations.</defaultvalue>
        </inputBox>

        <inputBox plugin="Number" property="Number" width="20%" alignment="Left">
          <description lang="en">Number to encrypt:</description>
          <defaultvalue>100</defaultvalue>
        </inputBox>

        <sampleViewer image="RSA" file="WorkspaceManagerSamples\RSA_Encryption_Sample.cwm">
          <name lang="en" >RSA Encryption Output</name>
          <description lang="en">RSA Encryption Output</description>

          <headline lang="en">RSA Encryption Output</headline>
          <desc lang="en">Here you can see the RSA encryption output</desc>

          <presentation plugin="Ciphertext" width="90%" alignment="Left">
            <description lang="en">Ciphertext (in Hex):</description>
          </presentation>

          <outputBox plugin="Encrypted Number" property="CurrentValue" width="30%" alignment="Left">
            <description lang="en">Encrypted Number:</description>
          </outputBox>
        </sampleViewer>
      </input>

      <input image="RSA" >
        <name lang="en">RSA Decryption</name>
        <description lang="en">
          Select this, to use RSA for decryption.
        </description>

        <headline lang="en">RSA Decryption</headline>
        <desc lang="en">Input the private key and the message or number to decrypt here</desc>

        <inputBox plugin="N" property="Text" group="Key" width="20%">
          <description lang="en">N (common part of keypair):</description>
          <defaultvalue>299</defaultvalue>
        </inputBox>

        <inputBox plugin="e" property="Text" group="Key" width="20%">
          <description lang="en">d (private part of keypair):</description>
          <defaultvalue>23</defaultvalue>
        </inputBox>

        <inputBox plugin="Cleartext" property="Text" visibleLines="5" alignment="Left">
          <description lang="en">Text message to decrypt (in Hex):</description>
          <defaultvalue lang="en"></defaultvalue>
        </inputBox>

        <inputBox plugin="Number" property="Number" width="20%" alignment="Left">
          <description lang="en">Number to decrypt:</description>
          <defaultvalue>146</defaultvalue>
        </inputBox>

        <sampleViewer image="RSA" file="WorkspaceManagerSamples\RSA_Decryption_Sample.cwm">
          <name lang="en" >RSA Decryption Output</name>
          <description lang="en">RSA Decryption Output</description>

          <headline lang="en">RSA Decryption Output</headline>
          <desc lang="en">Here you can see the RSA decryption output</desc>

          <presentation plugin="Cleartext" width="90%" alignment="Left">
            <description lang="en">Cleartext:</description>
          </presentation>

          <outputBox plugin="Decrypted Number" property="CurrentValue" width="30%" alignment="Left">
            <description lang="en">Decrypted Number:</description>
          </outputBox>
        </sampleViewer>
      </input>
    </category>
    
  </category>

</category>
