<?xml version="1.0" encoding="utf-8" ?>

<!-- This is the XML file defining the classic encryption/decryption categories a user can select from. -->

<step>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en" >Algorithm Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en" >Select a classic encryption/decryption algorithm.</desc>

  <!-- Caesar input -->
  <input image="Caesar">
    <name lang="en" >Caesar</name>
    <description lang="en" >
      This encryption algorithm already used by the Roman general and dictator Caesar substitutes single letters: The substitution rule is that the letters of the cleartext alphabet are shifted by a special value (key).
    </description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en" >Here, you can enter the message to encrypt and select input format and encodings.</desc>
    
    <inputBox plugin="TextInput1" property="Text" alignment="Right" width="80%" visibleLines="10" 
              regex="[a-zA-Z0-9][a-zA-Z0-9]-[a-zA-Z0-9][a-zA-Z0-9]-[a-zA-Z0-9][a-zA-Z0-9]">
      <description lang="en">
        Message to encrypt: 
      </description>
      <defaultvalue lang="en">aa-aa-aa</defaultvalue>
    </inputBox>

    <comboBox plugin="TextInput1" property="EncodingSetting" defaultValue="0" alignment="Left" width="100" group="encoding">
      <description lang="en">
        Character Encoding type:
      </description>
      <item content="Default system encoding" lang="en"/>
      <item content="Unicode" lang="en"/>
      <item content="UTF-7" lang="en"/>
      <item content="UTF-8" lang="en"/>
      <item content="UTF-32" lang="en"/>
      <item content="ASCII" lang="en"/>
      <item content="Big endian unicode" lang="en"/>
    </comboBox>

    <comboBox plugin="TextInput1" property="InputFormatSetting" defaultValue="0" alignment="Center" width="20%" group="encoding">
      <description lang="en">
        Input Format:
      </description>
      <item content="Plain text" lang="en"/>
      <item content="Hex" lang="en"/>
      <item content="Base64" lang="en"/>
    </comboBox>

    <sampleViewer file="WorkspaceManagerSamples\Caesar_Sample.cwm" title="W_Caesar_Sample">
      <name lang="en">Summary</name>
      <description lang="en" >
        Bla bla.
      </description>

      <headline lang="en" >Summary</headline>
      <desc lang="en">Here is a summary of your choice.</desc>
      
      <inputBox plugin="TextInput1" property="Text" alignment="Right" width="80%" visibleLines="5">
        <description lang="en">
          Message to encrypt:
        </description>
      </inputBox>

      <!--<outputBox plugin="CaesarResult" property="CurrentValue" alignment="Stretch" width="80%" visibleLines="2">
        <description lang="en">
          Some output message:
        </description>
      </outputBox>-->

      <presentation plugin="CaesarResult" alignment="Stretch" height="100">
        <description lang="en">
          Plugin presentation:
        </description>
      </presentation>
      
      <!--<loadSample file="WorkspaceManagerSamples\Caesar_Sample.cwm" title="W_Caesar_Sample"/>-->
    </sampleViewer>
    
  </input>

  <!-- Vigenère input -->
  <sampleViewer image="Vigenere" file="WorkspaceManagerSamples\Vigenere_Sample.cwm" title="W_Vigenere_Sample">
    <name lang="en" >Vigenère</name>
    <description lang="en" >
      Vigenère is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>

    <headline lang="en" >Message Input</headline>
    <desc lang="en" >Here, you can enter the message to encrypt and the key to use.</desc>

    <inputBox plugin="VigenereInput1" property="Text" alignment="Right" width="78%" visibleLines="5" group="1">
      <description lang="en">
        Message to encrypt:
      </description>
      <defaultvalue lang="de">
        Hello world! Hallo Welt! Hola mundo! Bonjour le monde!
      </defaultvalue>
    </inputBox>

    <inputBox plugin="VigenereInput2" property="Text" alignment="Right" width="20%" visibleLines="5" group="1">
      <description lang="en">
        Key:
      </description>
      <defaultvalue lang="en">
        TURING
      </defaultvalue>
    </inputBox>

    <outputBox plugin="VigenereOutput1" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
      <description lang="en">
        Encryption output:
      </description>
    </outputBox>
    
    <outputBox plugin="VigenereOutput2" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="5" group="2">
      <description lang="en">
        Decryption output:
      </description>
    </outputBox>
    
  </sampleViewer>

  <!-- Substitution input -->
  <input id ="Substitution" image="Substitution">
    <name lang="en" >Substitution</name>
    <description lang="en" >
      Substitution is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- Enigma input -->
  <input id ="Enigma" image="Enigma">
    <name lang="en" >Enigma</name>
    <description lang="en" >
      Enigma is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- Playfair input -->
  <input id ="Playfair" image="Playfair">
    <name lang="en" >Playfair</name>
    <description lang="en" >
      Playfair is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- ADFGVX input -->
  <input id ="ADFGVX" image="ADFGVX">
    <name lang="en" >ADFGVX</name>
    <description lang="en" >
      ADFGVX is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- XOR input -->
  <input id ="XOR" image="XOR">
    <name lang="en" >XOR</name>
    <description lang="en" >
      XOR is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- Vernam input -->
  <input id ="Vernam" image="Vernam">
    <name lang="en" >Vernam</name>
    <description lang="en" >
      Vernam is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

  <!-- Transposition input -->
  <sampleViewer file="WorkspaceManagerSamples\Transposition_Sample.cwm" title="W_Transposition_Sample" image="Transposition">
    <name lang="en">Transposition</name>
    <description lang="en" >
      Transposition is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>

    <headline lang="en" >Transposition Cipher</headline>
    <desc lang="en">Here, you can change the parameters and view the results.</desc>

    <presentation plugin="TranspositionInput1" width="78%" height="100" group="1">
      <description lang="en">
        Message to encrypt:
      </description>
      <defaultvalue lang="de">
        Wir wurden entdeckt, flieh wenn du kannst
      </defaultvalue>
    </presentation>

    <presentation plugin="TranspositionInput2" width="20%" height="100" group="1">
      <description lang="en">
        Key:
      </description>
      <defaultvalue lang="de">ZEBRA</defaultvalue>
    </presentation>

    <presentation plugin="TranspositionEncrypt" height="300" width="49%" group="2">
      <description lang="en">
        Encryption:
      </description>
    </presentation>

    <presentation plugin="TranspositionDecrypt" height="300" width="49%" group="2">
      <description lang="en">
        Decryption:
      </description>
    </presentation>

    <outputBox plugin="TranspositionOutput1" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="2" group="3">
      <description lang="en">
        Encryption output:
      </description>
    </outputBox>

    <outputBox plugin="TranspositionOutput2" property="CurrentValue" alignment="Stretch" width="49%" visibleLines="2" group="3">
      <description lang="en">
        Decryption output:
      </description>
    </outputBox>

  </sampleViewer>

  <!-- Scytale input -->
  <input id ="Scytale" image="Scytale">
    <name lang="en" >Scytale</name>
    <description lang="en" >
      Scytale is a classic algorithm to encrypt plaintext or to decrypt ciphertext... (add instead some really helpful text).
    </description>
  </input>

</step>
