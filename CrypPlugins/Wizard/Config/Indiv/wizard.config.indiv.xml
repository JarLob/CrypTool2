<?xml version="1.0" encoding="utf-8" ?>

<!-- This is the XML file defining the individual procedures categories a user can select from. -->

<step>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en-US" >Individual Procedure Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en-US" >Select an individual procedure.</desc>

  <!-- Hash Functions Category -->
  <category id ="Hash" image="Hash">
    <name lang="en-US" >Hash Functions</name>
    <description lang="en-US" >
      Select hash functions to work with.
    </description>
    <file resource="Wizard.Config.Indiv.wizard.config.hash.xml" />
  </category>

  <!-- Prime Number Operations Category -->
  <category id ="Prime" image="Primes">
    <name lang="en-US" >Prime Number Operations</name>
    <description lang="en-US" >
      Select a prime numer operation to work with.
    </description>
    <file resource="Wizard.Config.Indiv.wizard.config.prime.xml" />
  </category>

  <!-- Key Exchange Category -->
  <category id ="Key" image="Key">
    <name lang="en-US" >Key Exchange</name>
    <description lang="en-US" >
      Select a key exchange algorithm to work with.
    </description>

    <!-- This is the step's headline. It should be short, but precise. -->
    <headline lang="en-US" >Key Exchange Algorithm Selection</headline>

    <!-- This is the step's description. -->
    <desc lang="en-US" >Select a key exchange algorithm.</desc>

    <!-- Diffie Hellman input -->
    <input id="Diffie" image="Key" >
      <name lang="en-US" >Diffie Hellman</name>
      <description lang="en-US" >
        Diffie Hellman is a key exchange algorithm... (add instead some really helpful text).
      </description>
    </input>
  </category>

</step>
