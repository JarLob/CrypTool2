<?xml version="1.0" encoding="utf-8" ?>

<!-- This is the XML file defining the prime number operations a user can select from. -->

<step>

  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en" >Prime Number Operation Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en" >Select a prime number operation.</desc>

  <!-- Factorization input -->
  <input id="Factorization" image="Primes" >
    <name lang="en" >Prime Number Factorization</name>
    <description lang="en" >
      Select to factorize prime numbers.
    </description>
  </input>

  <!-- Generation input -->
  <input id="Generation" image="Primes" >
    <name lang="en" >Prime Number Generation</name>
    <description lang="en" >
      Select to generate prime numbers.
    </description>
  </input>

  <!-- Test input -->
  <input id="Test" image="Primes" >
    <name lang="en" >Prime Number Test</name>
    <description lang="en" >
      Select to test numbers for being prime.
    </description>
  </input>

</step>
