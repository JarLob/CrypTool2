  <!-- This is the step's headline. It should be short, but precise. -->
  <headline lang="en" >Age Selection</headline>

  <!-- This is the step's description. -->
  <desc lang="en" >Select classic or modern encryption.</desc>

  <!-- Classic Encryption Category -->
  <category id ="ClassicEn" image="Classic">
    <name lang="en" >Classic Encryption</name>
    <description lang="en" >
      Select a classic encryption to analyze.
    </description>
    <file resource="Wizard.Config.Analysis.wizard.config.classicEn.xml" />
  </category>

  <!-- Modern Encryption Category -->
  <category id ="ModernEn" image="Modern">
    <name lang="en" >Modern Encryption</name>
    <description lang="en" >
      Select a modern encryption to analyze.
    </description>
    <file resource="Wizard.Config.Analysis.wizard.config.modernEn.xml" />
  </category>

</step>
