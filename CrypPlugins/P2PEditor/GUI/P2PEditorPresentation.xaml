<GUI:P2PUserControl x:Class="Cryptool.P2PEditor.GUI.P2PEditorPresentation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Cryptool.P2PEditor.GUI.Controls" xmlns:GUI="clr-namespace:Cryptool.P2PEditor.GUI" xmlns:Converters="clr-namespace:Cryptool.P2PEditor.Converters" mc:Ignorable="d" d:DesignHeight="278" d:DesignWidth="656" x:Name="P2PEditorControl">
	<GUI:P2PUserControl.Resources>
        <Converters:ConnectivityToVisibilityConverter x:Key="ConnectivityToVisibilityConverter" />
	</GUI:P2PUserControl.Resources>
	<Grid>
		<TabControl TabStripPlacement="Top" Name="JobTabControl">
            <TabItem Header="Active jobs" Name="ActiveJobsTab" IsEnabled="{Binding IsP2PConnected, ElementName=P2PEditorControl}">
                <controls:JobDisplay x:Name="ActiveJobsControl" Jobs="{Binding Jobs, ElementName=P2PEditorControl}" />
			</TabItem>
            <TabItem Header="New job" Name="JobCreationTab" IsEnabled="{Binding IsP2PConnected, ElementName=P2PEditorControl}">
				<controls:JobCreation />
			</TabItem>
            <TabItem Header="Connect" Name="ConnectTab" Visibility="{Binding IsP2PConnected, ElementName=P2PEditorControl, Converter={StaticResource ConnectivityToVisibilityConverter}}">
                <controls:ConnectTab IsP2PConnecting="{Binding IsP2PConnecting, ElementName=P2PEditorControl}" />
            </TabItem>
            <TabItem Header="Get new Certificate" Name="GetNewCertificateTab" Visibility="{Binding IsP2PConnected, ElementName=P2PEditorControl, Converter={StaticResource ConnectivityToVisibilityConverter}}">
                <controls:GetNewCertificate />
            </TabItem>
            <TabItem Header="About" Name="AboutTab">
                <Frame Source="../DetailedDescription/Description.xaml" />
            </TabItem>
        </TabControl>
	</Grid>
</GUI:P2PUserControl>