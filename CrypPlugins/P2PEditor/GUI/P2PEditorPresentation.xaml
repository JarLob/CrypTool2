<GUI:P2PUserControl x:Class="Cryptool.P2PEditor.GUI.P2PEditorPresentation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Cryptool.P2PEditor.GUI.Controls" xmlns:GUI="clr-namespace:Cryptool.P2PEditor.GUI" mc:Ignorable="d" d:DesignHeight="278" d:DesignWidth="656" x:Name="P2PEditorControl">
	<Grid>
		<TabControl TabStripPlacement="Top" Name="JobTabControl" IsEnabled="{Binding IsP2PConnected, ElementName=P2PEditorControl}">
			<TabItem Header="Active jobs" Name="ActiveJobsTab">
				<controls:JobDisplay x:Name="ActiveJobsControl" Jobs="{Binding Jobs,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
			</TabItem>
			<TabItem Header="New job" Name="JobCreationTab">
				<controls:JobCreation />
			</TabItem>
		</TabControl>
	</Grid>
</GUI:P2PUserControl>