<ResourceDictionary x:Class="Cryptool.P2PEditor.GUI.Controls.JobDisplayTemplate"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Distributed="clr-namespace:Cryptool.P2PEditor.Distributed">

    <DataTemplate DataType="{x:Type Distributed:DistributedJob}" x:Key="jobDisplayTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Name:" Height="28" FontSize="13" FontWeight="Bold" />
                <Label Content="Workspace:" Height="28" FontSize="11" FontWeight="Bold" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="{Binding JobName}" Height="28" FontSize="13" />
                <Label Content="{Binding FileName}" Height="28" FontSize="11" />
            </StackPanel>
            <Label Content="{Binding JobDescription}" Grid.ColumnSpan="2" Margin="0,50,0,0"  FontSize="11" />
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>