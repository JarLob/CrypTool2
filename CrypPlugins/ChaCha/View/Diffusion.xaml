<UserControl x:Class="Cryptool.Plugins.ChaCha.View.Diffusion"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:conv="clr-namespace:Cryptool.Plugins.ChaCha.Helper.Converter"
                 mc:Ignorable="d"
                 d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\Index.xaml" />
                <ResourceDictionary Source="..\ContentTemplate\PageContentTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextBox}" x:Key="DiffusionText" BasedOn="{StaticResource Text}">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type TextBox}" x:Key="DiffusionHex" BasedOn="{StaticResource Hex}">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type TextBox}" x:Key="DiffusionInput" BasedOn="{StaticResource DiffusionHex}">
                <Setter Property="IsReadOnly" Value="False"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <AdornedElementPlaceholder x:Name="placeholder" />
                                <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14" FontStyle="Italic" Foreground="Red"
                                               Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="{x:Type StackPanel}">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="5" />
            </Style>
            <conv:BytesToHex x:Key="ToHex" />
            <conv:BigIntegerToHexWithVersion x:Key="ToHexWithVersion" />
            <conv:DoubleToPercentage x:Key="DoubleToPercentage" />
        </ResourceDictionary>
    </UserControl.Resources>
    <ContentControl Template="{StaticResource PageContentTemplate}" Name="Root">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Viewbox Style="{StaticResource UniformViewbox}" Grid.Row="0" Grid.ColumnSpan="2">
                <RichTextBox Width="{Binding ElementName=Root, Path=ActualWidth}" Style="{StaticResource RichText}">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Loc DiffusionDescription1}"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="{Loc DiffusionDescription2}"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="{Loc DiffusionDescription3}"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="{Loc DiffusionDescription4}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Viewbox>

            <!--#region Diffusion input -->

            <Viewbox Grid.Row="1" Grid.Column="0" Style="{StaticResource UniformViewbox}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBox Text="{Loc DiffusionKeyLabel1}" Style="{StaticResource DiffusionText}" Background="LightCoral"/>
                        <TextBox Text="{Loc DiffusionKeyLabel2}" Style="{StaticResource DiffusionText}"  Background="LightCoral"/>
                        <TextBox Text="{Loc DiffusionKeyLabel3}" Style="{StaticResource DiffusionText}"  Background="LightCoral"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBox Text="{Loc DiffusionIVLabel1}" Style="{StaticResource DiffusionText}" Background="PaleGreen"/>
                        <TextBox Text="{Loc DiffusionIVLabel2}" Style="{StaticResource DiffusionText}" Background="PaleGreen"/>
                        <TextBox Text="{Loc DiffusionIVLabel3}" Style="{StaticResource DiffusionText}" Background="PaleGreen"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBox Text="{Loc DiffusionCounterLabel1}" Style="{StaticResource DiffusionText}" Background="SkyBlue"/>
                        <TextBox Text="{Loc DiffusionCounterLabel2}" Style="{StaticResource DiffusionText}" Background="SkyBlue"/>
                        <TextBox Text="{Loc DiffusionCounterLabel3}" Style="{StaticResource DiffusionText}" Background="SkyBlue"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="0">
                        <TextBox Text="{Loc DiffusionFlippedBits}" Style="{StaticResource DiffusionText}"/>
                        <TextBox Text="{Loc DiffusionState}" Style="{StaticResource DiffusionText}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBox Style="{StaticResource DiffusionHex}" Text="{Binding ChaCha.InputKey, Converter={StaticResource ToHex}, Mode=OneWay}" />
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionKeyExplicit"/>
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionKeyXOR"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBox Style="{StaticResource DiffusionHex}" Text="{Binding ChaCha.InputIV, Converter={StaticResource ToHex}, Mode=OneWay}"/>
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionIVExplicit"/>
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionIVXOR"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBox Style="{StaticResource DiffusionHex}">
                            <TextBox.Text>
                                <MultiBinding Converter="{StaticResource ToHexWithVersion}" Mode="OneWay">
                                    <Binding Path="ChaCha.InitialCounter" />
                                    <Binding Path="ChaCha.Settings" />
                                </MultiBinding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionInitialCounterExplicit"/>
                        <TextBox Style="{StaticResource DiffusionInput}" Name="InputDiffusionInitialCounterXOR"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBox Style="{StaticResource DiffusionText}">
                                <TextBox.Text>
                                    <MultiBinding StringFormat=" {0}/{1} ({2})">
                                        <Binding Path="FlippedBits" Mode="OneWay" />
                                        <Binding Path="TotalBits" Mode="OneTime" />
                                        <Binding Path="FlippedBitsPercentage" Mode="OneWay" Converter="{StaticResource DoubleToPercentage}" />
                                    </MultiBinding>
                                </TextBox.Text>
                            </TextBox>
                        </StackPanel>
                        <ContentControl Style="{DynamicResource DiffusionStateLabel}"/>
                    </StackPanel>

                </Grid>
            </Viewbox>
            <!--#endregion-->

            <Grid Grid.Row="1" Grid.Column="1" Name="Root2">
                <Viewbox Style="{StaticResource UniformViewbox}">
                    <RichTextBox Style="{StaticResource RichText}" Width="{Binding ElementName=Root2, Path=ActualWidth}">
                        <FlowDocument>
                            <Table>
                                <Table.Resources>
                                    <Style TargetType="{x:Type TableCell}">
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                    <Style TargetType="{x:Type RichTextBox}" BasedOn="{StaticResource RichHex}" />
                                </Table.Resources>
                                <Table.Columns>
                                    <TableColumn />
                                </Table.Columns>
                                <TableRowGroup>
                                    <TableRow>
                                        <TableCell BorderThickness="0">
                                            <Paragraph>
                                                <InlineUIContainer>
                                                    <Border Style="{StaticResource StateBorder}">
                                                        <StackPanel Orientation="Vertical">
                                                            <StackPanel Style="{StaticResource DiffusionNonXOR}">
                                                                <RichTextBox>
                                                                    <FlowDocument>
                                                                        <Paragraph>
                                                                            F1AB5481
                                                                        </Paragraph>
                                                                    </FlowDocument>
                                                                </RichTextBox>
                                                                <RichTextBox Style="{StaticResource RTB_DiffusionNonXOR}">
                                                                    <FlowDocument>
                                                                        <Paragraph>
                                                                            F<Run Foreground="Red">3</Run>A<Run Foreground="Red">C1</Run>48<Run Foreground="Red">D</Run>
                                                                        </Paragraph>
                                                                    </FlowDocument>
                                                                </RichTextBox>
                                                            </StackPanel>
                                                            <StackPanel Style="{StaticResource DiffusionXOR}">
                                                                <RichTextBox>
                                                                    <FlowDocument>
                                                                        <Paragraph>
                                                                            0<Run Foreground="Red">2</Run>0<Run Foreground="Red">74</Run>00<Run Foreground="Red">C</Run>
                                                                        </Paragraph>
                                                                    </FlowDocument>
                                                                </RichTextBox>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </InlineUIContainer>
                                            </Paragraph>
                                        </TableCell>
                                    </TableRow>
                                </TableRowGroup>
                                <TableRowGroup>
                                    <TableRow>
                                        <TableCell BorderThickness="0">
                                            <Paragraph Style="{StaticResource Description}">
                                                <Run Text="{Loc DiffusionExampleCaption}"/>
                                            </Paragraph>
                                        </TableCell>
                                    </TableRow>
                                </TableRowGroup>
                            </Table>
                        </FlowDocument>
                    </RichTextBox>
                </Viewbox>
            </Grid>
        </Grid>
    </ContentControl>
</UserControl>