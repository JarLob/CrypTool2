<ResourceDictionary x:Class="CrypTool.Plugins.ChaCha.Styles.Viewbox"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="UniformViewbox" TargetType="{x:Type Viewbox}">
        <Setter Property="StretchDirection" Value="Both" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>
    <Style x:Key="DownOnlyViewbox" TargetType="{x:Type Viewbox}">
        <Setter Property="StretchDirection" Value="DownOnly" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>
    <Style x:Key="StateViewbox" TargetType="{x:Type Viewbox}" BasedOn="{StaticResource UniformViewbox}">
        <Setter Property="Margin" Value="1" />
    </Style>
</ResourceDictionary>