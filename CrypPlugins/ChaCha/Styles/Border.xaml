<ResourceDictionary x:Class="Cryptool.Plugins.ChaCha.Styles.Border"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StateBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    <Style x:Key="MatrixBorder" TargetType="{x:Type Border}" BasedOn="{StaticResource StateBorder}">
        <Setter Property="Margin" Value="20" />
    </Style>
</ResourceDictionary>