<UserControl x:Class="Cryptool.MD5.Presentation.States.InitializedPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:displays="clr-namespace:Cryptool.MD5.Presentation.Displays" Height="400" Width="800">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="StyleDictionary.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
		<Grid>
			<displays:HashAccumulatorDisplay Margin="8,144,8,0" DataContext="{Binding CurrentState}" VerticalAlignment="Top" Height="86"/>
			<TextBlock Margin="8,0,8,8" Text="The first thing we do is initialize our accumulators to their starting values, which are the fixed constants that you can see above." Height="80" VerticalAlignment="Bottom" Style="{DynamicResource textBlockStyle}"/>
			<TextBlock Height="98" Margin="8,8,8,0" VerticalAlignment="Top" Text="The variables H1 - H4 are our accumulator variables. While we perform the hash, we will change them after each execution of the compression function. When we are done, they contain the final MD5 hash value." Style="{DynamicResource textBlockStyle}"/>
		</Grid>
</UserControl>
