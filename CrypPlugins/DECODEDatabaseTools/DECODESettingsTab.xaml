<UserControl x:Class="Cryptool.Plugins.DECODEDatabaseTools.DECODESettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" xmlns:Properties="clr-namespace:Cryptool.PluginBase.Properties;assembly=CrypPluginBase" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <StackPanel Name="stackPanel1" VerticalAlignment="Top" Margin="20">
            <Grid Width="500" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{Loc Username}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <TextBox Name="UsernameTextbox"  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch"  TextChanged="UsernameTextbox_OnTextChanged" Margin="10,10,10,10"/>

                <Label Grid.Column="0" Grid.Row="1" Content="{Loc Password}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <PasswordBox Name="PasswordTextbox"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" PasswordChanged="PasswordTextbox_OnPasswordChanged" Margin="10,10,10,10"/>

                <Label Grid.Column="0" Grid.Row="2" Content="{Loc TestLoginData}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <Button Name="TestLoginDataButton" Grid.Column="1" Grid.Row="2" Content="{Loc TestLoginData}" Click="TestLoginDataButton_OnClick" />
                
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
