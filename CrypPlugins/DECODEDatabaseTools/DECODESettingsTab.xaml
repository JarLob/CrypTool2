<UserControl x:Class="Cryptool.Plugins.DECODEDatabaseTools.DECODESettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" xmlns:Properties="clr-namespace:Cryptool.PluginBase.Properties;assembly=CrypPluginBase" 
             xmlns:tools="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="20">
            <Image Source="logo.png" Width="250" HorizontalAlignment="Left"/>
            <Grid Width="500" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="WrapWithOverflow" Grid.Row="0" Grid.ColumnSpan="2"  HorizontalAlignment="Left" Text="{Loc SettingsInfoText}"/>

                <Label Grid.Column="0" Grid.Row="1" Content="{Loc Username}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <TextBox Name="UsernameTextbox"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch"  TextChanged="UsernameTextbox_OnTextChanged" Margin="10,10,10,10"/>

                <Label Grid.Column="0" Grid.Row="2" Content="{Loc Password}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <PasswordBox Name="PasswordTextbox"  Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" PasswordChanged="PasswordTextbox_OnPasswordChanged" Margin="10,10,10,10"/>

                <Label Grid.Column="0" Grid.Row="3" Content="{Loc TestLoginData}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Height="30"  />
                <Button Name="TestLoginDataButton" Grid.Column="1" Grid.Row="3" Content="{Loc TestLoginData}" Click="TestLoginDataButton_OnClick" />
            </Grid>
            
            <Label Content="Text Element Colors:"/>
            <Grid Width="400" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Label Content="Tag:" Grid.Row="0" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border  Margin="0,0,0,2" Grid.Row="0" Grid.Column="1"  BorderThickness="1" BorderBrush="Gray" Width="80" Height="26" HorizontalAlignment="Left">
                    <tools:ColorPicker x:Name="TagElementColor" SelectedColorChanged="CrPickerSelectedColorChanged" Width="50"></tools:ColorPicker>
                </Border>

                <Label Content="Null:" Grid.Row="1" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border  Margin="0,0,0,2" Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Width="80" Height="26"  HorizontalAlignment="Left">
                    <tools:ColorPicker x:Name="NullElementColor" SelectedColorChanged="CrPickerSelectedColorChanged" Width="50"></tools:ColorPicker>
                </Border>

                <Label Content="Regular:" Grid.Row="0" Grid.Column="2" Height="26"  HorizontalAlignment="Left"/>
                <Border  Margin="0,0,0,2"  Grid.Row="0" Grid.Column="3" BorderThickness="1" BorderBrush="Gray" Width="80" Height="26" HorizontalAlignment="Left">
                    <tools:ColorPicker x:Name="RegularElementColor" SelectedColorChanged="CrPickerSelectedColorChanged" Width="50"></tools:ColorPicker>
                </Border>

                <Label Content="Nomenclature:" Grid.Row="1" Grid.Column="2" Height="26"  HorizontalAlignment="Left"/>
                <Border  Margin="0,0,0,2"  Grid.Row="1" Grid.Column="3" BorderThickness="1" BorderBrush="Gray" Width="80" Height="26" HorizontalAlignment="Left">
                    <tools:ColorPicker x:Name="NomenclatureElementColor" SelectedColorChanged="CrPickerSelectedColorChanged" Width="50"></tools:ColorPicker>
                </Border>

                <Label Content="Comment:" Grid.Row="2" Grid.Column="0" Height="26"  HorizontalAlignment="Left"/>
                <Border  Margin="0,0,0,2" Grid.Row="2" Grid.Column="1"  BorderThickness="1" BorderBrush="Gray" Width="80" Height="26" HorizontalAlignment="Left">
                    <tools:ColorPicker x:Name="CommentColor" SelectedColorChanged="CrPickerSelectedColorChanged" Width="50"></tools:ColorPicker>
                </Border>

                <Button Name="ResetColorButton" Content="Reset Colors" Grid.Row="2" Grid.Column="3" Width="80" Height="25" HorizontalAlignment="Left" Click="ResetColorButton_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
