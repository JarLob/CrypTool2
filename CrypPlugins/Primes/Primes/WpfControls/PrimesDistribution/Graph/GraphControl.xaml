<UserControl x:Class="Primes.WpfControls.PrimesDistribution.Graph.GraphControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:graph="clr-namespace:Primes.WpfControls.PrimesDistribution.Graph" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
             xmlns:lang="clr-namespace:Primes.Resources.lang.WpfControls.Distribution"
             xmlns:comps="clr-namespace:Primes.WpfControls.Components">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Resources/Shared.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <comps:InputRangeControl 
      x:Name="ircCountPrimes"
      InputRangeControlType="Horizontal"
      Grid.Row="0"
      Title=""
      />    
    <GroupBox Header="{x:Static lang:Distribution.graph_groupboxheader}" Name="gbFunctions" Grid.Row="1" Margin="0,20,0,0">
      <StackPanel>
        <CheckBox Name="cbDontPaint" IsChecked="False" Margin="3,3,3,3" VerticalAlignment="Center" Click="cbDontPaint_Click" Visibility="Collapsed">Nicht zeichnen</CheckBox>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
                           
          </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Visible">
        <Grid Name="pnlFunctions">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
          <Line X1="0" X2="10" Y1="14" Y2="14" Stroke="Blue" StrokeThickness="3" Grid.Row="0" Grid.Column="0" />
          <CheckBox Name="cbPiGauss" IsChecked="True" Margin="3,3,3,3" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Content="{x:Static lang:Distribution.graph_gaussname}"></CheckBox>
          <Button Name="btnStopPiGuass" IsEnabled="False" Click="StopFunctionClick" Margin="3,3,3,3" Grid.Row="0" Grid.Column="2" Content="{x:Static lang:Distribution.graph_btnStop}"></Button>
          <Button Name="btnResumePiGuass" IsEnabled="False" Click="ResumeFunctionClick" Margin="3,3,3,3" Grid.Row="0" Grid.Column="3" Content="{x:Static lang:Distribution.graph_btnResume}"></Button>
          <Image Cursor="Hand" Source="../../../Resources/icons/help.png" Width="16" Height="16" Grid.Row="0" Grid.Column="4" Name="btnHelpPiGuass" HorizontalAlignment="Left" MouseLeftButtonDown="btnHelpFunctionTypeClick"/>
          <DockPanel Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="10,0,0,0" Name="dpGauss">
                <DockPanel.ContextMenu>
                  <ContextMenu Opened="ctxMenu_Opened" Closed="ctxMenu_Closed" Name="ctxMenuDpGauss">
                    <MenuItem Header="{x:Static lang:Distribution.graph_contextmenucopy}" Name="miCopyGauss" Click="miCopy_Click"/>
                  </ContextMenu>
                </DockPanel.ContextMenu>
                <TextBlock Name="lblCalcInfoPiGuass" Visibility="Collapsed" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave" Text="{x:Static lang:Distribution.graph_gausscountinfo}"></TextBlock>
            <TextBlock Name="tbInfoGaußPrimeTheorem" Margin="3,0,0,0" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave"/>
          </DockPanel>
        
          <Line X1="0" X2="10" Y1="10" Y2="10" Stroke="Green" StrokeThickness="3" Grid.Row="1" Grid.Column="0"/>
          <CheckBox Name="cbLin" IsChecked="True" Margin="3,3,3,3" Grid.Row="1" Grid.Column="1" Content="{x:Static lang:Distribution.graph_linname}"></CheckBox>
          <Button Name="btnStopLin" IsEnabled="False" Click="StopFunctionClick" Margin="3,3,3,3" Grid.Row="1" Grid.Column="2" Content="{x:Static lang:Distribution.graph_btnStop}"></Button>
          <Button Name="btnResumeLin" IsEnabled="False" Click="ResumeFunctionClick" Margin="3,3,3,3" Grid.Row="1" Grid.Column="3" Content="{x:Static lang:Distribution.graph_btnResume}"></Button>
          <Image Cursor="Hand" Source="../../../Resources/icons/help.png" Width="16" Height="16" Name="btnHelpLiN" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" MouseLeftButtonDown="btnHelpFunctionTypeClick"/>
          <DockPanel Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="10,0,0,0" Name="dpLin">
                <DockPanel.ContextMenu>
                  <ContextMenu Opened="ctxMenu_Opened" Closed="ctxMenu_Closed" Name="ctxMenuDpLin">
                    <MenuItem Header="{x:Static lang:Distribution.graph_contextmenucopy}" Name="miCopyLin" Click="miCopy_Click"/>
                  </ContextMenu>
                </DockPanel.ContextMenu>
                  <TextBlock Name="lblCalcInfoLiN" Visibility="Collapsed" Text="{x:Static lang:Distribution.graph_lincountinfo}" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave">

            </TextBlock>
            <TextBlock Name="tbInfoLin" Margin="3,0,0,0" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave"/>
          </DockPanel>

          
          <Line X1="0" X2="10" Y1="10" Y2="10" Stroke="Red" StrokeThickness="3" Grid.Row="2" Grid.Column="0"/>
          <CheckBox Name="cbPiX" IsChecked="True" Margin="3,3,3,3" Grid.Row="2" Grid.Column="1" Content="{x:Static lang:Distribution.graph_pinname}"></CheckBox>
          <Button Name="btnStopPix" IsEnabled="False" Click="StopFunctionClick" Margin="3,3,3,3" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" Content="{x:Static lang:Distribution.graph_btnStop}"></Button>
                            <Button Name="btnResumePix" IsEnabled="False" Click="ResumeFunctionClick" Margin="3,3,3,3" Grid.Row="2" Grid.Column="3" VerticalAlignment="Top" Content="{x:Static lang:Distribution.graph_btnResume}"></Button>
          <Image Cursor="Hand" Source="../../../Resources/icons/help.png" Width="16" Height="16" Grid.Row="2" Grid.Column="4" Name="btnHelpPiX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,6,0,0" MouseLeftButtonDown="btnHelpFunctionTypeClick"/>
          <DockPanel Grid.Row="2" Grid.Column="5" VerticalAlignment="Center" Margin="10,0,0,0" Name="dpPiX">
                <DockPanel.ContextMenu>
                  <ContextMenu Opened="ctxMenu_Opened" Closed="ctxMenu_Closed" Name="ctxMenuDpPiX">
                    <MenuItem Header="{x:Static lang:Distribution.graph_contextmenucopy}" Name="miCopyPix" Click="miCopy_Click"/>
                  </ContextMenu>
                </DockPanel.ContextMenu>
                <TextBlock Name="lblCalcInfoPiX" Visibility="Collapsed" Margin="0,6,0,0" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave" Text="{x:Static lang:Distribution.graph_pincountinfo}"></TextBlock>
            <TextBlock Name="tbInfoPiX" Margin="3,6,0,0" MouseEnter="lblInfo_MouseEnter" MouseLeave="lblInfo_MouseLeave"/>
          </DockPanel>
              <TextBlock Name="lblInfoPixDontCalc" Grid.Row="2" Grid.Column="6" Foreground="Red" TextWrapping="Wrap" Visibility="Hidden" Margin="10,0,0,0" MinWidth="100" MaxWidth="300" HorizontalAlignment="Left" Text="{x:Static lang:Distribution.graph_pinlimitinfo}"></TextBlock>
            </Grid>
          </ScrollViewer>
          </Grid>
        <!--<DockPanel HorizontalAlignment="Left" Name="dpLiN">
          <Line X1="0" X2="10" Y1="10" Y2="10" Stroke="Green" StrokeThickness="3" />

          <CheckBox Name="cbLin" IsChecked="True" Margin="3,3,3,3" >Das logarithmische Integral</CheckBox>
          <Button Name="btnStopLin" IsEnabled="False" Click="StopFunctionClick" Margin="3,3,3,3">Stop</Button>
          <Button Name="btnResumeLin" IsEnabled="False" Click="ResumeFunctionClick" Margin="3,3,3,3">Weiter</Button>
          <Image Cursor="Hand" Source="/Primes.Resources;component/icons/help.png" Width="16" Height="16" Name="btnHelpLiN" HorizontalAlignment="Left" MouseLeftButtonDown="btnHelpFunctionTypeClick"/>
          <TextBlock Name="tbInfoLin" />
        </DockPanel>
        <DockPanel HorizontalAlignment="Left" Name="dpPix">
          <Line X1="0" X2="10" Y1="10" Y2="10" Stroke="Red" StrokeThickness="3" />
          <CheckBox Name="cbPiX" IsChecked="True" Margin="3,3,3,3" >Exakte Treppenfunktion π(x)</CheckBox>
          <Button Name="btnStopPix" IsEnabled="False" Click="StopFunctionClick" Margin="3,3,3,3">Stop</Button>
          <Button Name="btnResumePix" IsEnabled="False" Click="ResumeFunctionClick" Margin="3,3,3,3">Weiter</Button>
          <Image Cursor="Hand" Source="/Primes.Resources;component/icons/help.png" Width="16" Height="16" Name="btnHelpPiX" HorizontalAlignment="Left" MouseLeftButtonDown="btnHelpFunctionTypeClick"/>
          <TextBlock Name="tbInfoPiX" />

        </DockPanel>-->
      </StackPanel>
    </GroupBox>
    <Grid Grid.Row="2">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Viewbox Stretch="Uniform" Name="vb" VerticalAlignment="Top" HorizontalAlignment="Left">
      <Viewbox.LayoutTransform>
        <TransformGroup>
          <ScaleTransform ScaleX="{Binding ElementName=sliderTest, Path=Value}" ScaleY="{Binding ElementName=sliderTest, Path=Value}"/>
        </TransformGroup>
      </Viewbox.LayoutTransform>
      <Canvas Margin="30,10,10,10" Name="PaintArea">
        <graph:CartesianPlane x:Name="cgraph"/>
      </Canvas>
      </Viewbox>
      </ScrollViewer>
      </Grid>
    <Slider Name="sliderTest" Minimum="1" Maximum="5" Grid.Row="3" Value="1"/>
  </Grid>

</UserControl>
