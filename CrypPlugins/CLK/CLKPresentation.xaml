<UserControl x:Class="Cryptool.CLK.CLKPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Width="32" Height="32" PreviewMouseLeftButtonUp="CLKButtonImage_MouseLeftButtonUp">
        <Image Source="icon.png" Stretch="None" Name="CLKButtonImage" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Grid.Row="0" PreviewMouseLeftButtonUp="CLKButtonImage_MouseLeftButtonUp" />
            </Button>
        <TextBox Name="myTextBox" Grid.Row="1" />
    </Grid>
</UserControl>
