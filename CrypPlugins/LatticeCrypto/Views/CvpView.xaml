<UserControl x:Class="LatticeCrypto.Views.CvpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModels="clr-namespace:LatticeCrypto.ViewModels"
             xmlns:Properties="clr-namespace:LatticeCrypto.Properties">

    <UserControl.DataContext>
        <ViewModels:CvpViewModel/>
    </UserControl.DataContext>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Name="rowLattice"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Name="rowLog" Height="55"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto" MinWidth="160"/>
        </Grid.ColumnDefinitions>

        <ToolBarTray Grid.Row="0" Grid.Column="0" IsLocked="True">
            <ToolBar>
                <Button Click="Button_Click_2" Margin="4,0,2,0" ToolTip="{x:Static Properties:Languages.tooltipLoadLatticeFromFile}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/folder_open_icon.png" Width="20" Height="20"/>
                </Button>
                <Button  Command="{Binding SaveToFileCommand}" Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipSaveLatticeToFile}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/save.png" Width="20" Height="20"/>
                </Button>
                <Separator Width="2"/>
                <Button Click="Button_Click_3" Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipInsertLatticeFromClipboard}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/paste.png" Width="20" Height="20"/>
                </Button>
                <Button Command="{Binding SaveToClipboardCommand}" Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipCopyLatticeToClipboard}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/clipboard_copy_icon.png" Width="20" Height="20"/>
                </Button>
                <Separator Width="2"/>
                <ToggleButton Name="toggleChangeLattice" Margin="4,0,2,0" ToolTip="{x:Static Properties:Languages.tooltipAdjustLatticeVectors}" IsEnabled="False" Opacity="0.5">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/cursor_hand.png" Width="20" Height="20" />
                </ToggleButton>
                <ToggleButton Name="toggleScrollLattice" IsChecked="True" Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipMoveLattice}" IsEnabled="False">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/cursor_drag_arrow.png" Width="20" Height="20" />
                </ToggleButton>
                <Separator Width="2"/>
                <Button Name="zoomIn" Command="{Binding ZoomInCommand}" Margin="4,0,2,0" ToolTip="{x:Static Properties:Languages.tooltipZoomInLattice}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/zoom_in.png" Width="20" Height="20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
                <Button Name="zoomOut" Command="{Binding ZoomOutCommand}" Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipZoomOutLattice}">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/zoom_out.png" Width="20" Height="20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
                <Separator Width="2"/>
                <Button Margin="2,0,4,0" ToolTip="{x:Static Properties:Languages.tooltipToggleLog}" Click="ButtonLog_Click">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/book_pencil.png" Width="20" Height="20"/>
                </Button>
                <Separator Width="2"/>
                <Button Margin="2,0,4,0" ToolTip="Screenshot" Click="ButtonCamera_Click">
                    <Image Source="/LatticeCrypto;component/Utilities/Images/photography_camera.png" Width="20" Height="20"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <Grid Name="Grid" Grid.Row="1" Grid.Column="0" Background="#7FCCD6E4" ClipToBounds="True" MouseWheel="UserControl_MouseWheel" MouseLeftButtonDown="UserControl_MouseDown" MouseLeftButtonUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">
            <!--<Image Name="imageViewer" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>-->
            <Canvas Name="canvas"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>
        <ScrollViewer Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" VerticalScrollBarVisibility="Auto" Width="250">
            <StackPanel>
                <Label Content="{x:Static Properties:Languages.labelVisualizationForDim2}" FontWeight="Bold"/>
                <GroupBox HorizontalAlignment="Center" Margin="0,10,0,0">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{x:Static Properties:Languages.labelCodomain}" HorizontalAlignment="Center" Background="LightBlue" />
                            <Image Name="btnHelpCodomain" Cursor="Hand"  Width="16" Height="16" HorizontalAlignment="Right" MouseLeftButtonDown="Button_Help_MouseLeftButtonDown" Source="/LatticeCrypto;component/Utilities/Images/help.png" />
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid HorizontalAlignment="Center" Height="auto" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition MinWidth="50"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition MinWidth="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="{x:Static Properties:Languages.labelFrom}"/>
                        <TextBox Grid.Column="1" Name="textRangeStart" Text="-99" TextChanged="ValidateCodomain"/>
                        <Label Grid.Column="2" Content="{x:Static Properties:Languages.labelTo}"/>
                        <TextBox Grid.Column="3" Name="textRangeEnd" Text="99" TextChanged="ValidateCodomain"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" Name="errorText" Visibility="Collapsed" TextWrapping="Wrap"/>
                    </Grid>
                </GroupBox>
                
                <Button Name="buttonGenerate" Content="{x:Static Properties:Languages.buttonGenerateNewLattice}" Margin="0,10,0,0"  Click="Button_Click" HorizontalAlignment="Center"/>
                <Button Content="{x:Static Properties:Languages.buttonEnterLatticeManually}" Margin="0,10,0,0" Click="Button_Click_1" HorizontalAlignment="Center"/>

                <GroupBox HorizontalAlignment="Center" Margin="0,20,0,0">
                    <GroupBox.Header>
                        <Label Content="{x:Static Properties:Languages.labelReducedLatticeBasis}" HorizontalAlignment="Center" Background="#CC008000"/>
                    </GroupBox.Header>
                    <GroupBox.Content>
                        <StackPanel>
                            <Grid HorizontalAlignment="Center" Height="auto"  Width="auto" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="30"/>
                                    <ColumnDefinition Width="10" Name="SepColumnRed"/>
                                    <ColumnDefinition MinWidth="30"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="0" Name="SepRowRed"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox Name="textReduced00" Grid.Column="0" Grid.Row="0" IsReadOnly="True"/>
                                <TextBox Name="textReduced01" Grid.Column="0" Grid.Row="2" IsReadOnly="True"/>
                                <TextBox Name="textReduced10" Grid.Column="2" Grid.Row="0" IsReadOnly="True"/>
                                <TextBox Name="textReduced11"  Grid.Column="2" Grid.Row="2" IsReadOnly="True"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                <Label Content="{x:Static Properties:Languages.labelSuccessiveMinima}" />
                                <Image Name="btnHelpSuccessiveMinima" Cursor="Hand"  Width="16" Height="16" HorizontalAlignment="Right" MouseLeftButtonDown="Button_Help_MouseLeftButtonDown" Source="/LatticeCrypto;component/Utilities/Images/help.png" />
                            </StackPanel>
                            <Grid HorizontalAlignment="Center" Height="auto" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="40"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition MinWidth="40"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Column="0" Name="textReducedLength0" IsReadOnly="True"/>
                                <TextBox Grid.Column="2" Name="textReducedLength1" IsReadOnly="True"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox.Content>
                </GroupBox>

                <GroupBox HorizontalAlignment="Center" Margin="0,20,0,0">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{x:Static Properties:Languages.labelTargetPoint}" Background="DarkOrange"/>
                            <Image Name="btnTargetPoint" Cursor="Hand"  Width="16" Height="16" HorizontalAlignment="Right" MouseLeftButtonDown="Button_Help_MouseLeftButtonDown" Source="/LatticeCrypto;component/Utilities/Images/help.png" />
                        </StackPanel>
                    </GroupBox.Header>
                    <GroupBox.Content>
                            <Grid HorizontalAlignment="Center" Height="auto"  VerticalAlignment="Top" Width="auto" Margin="0,5,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="30"/>
                            </Grid.ColumnDefinitions>
                                <TextBox Name="textTargetVectorX" Grid.Row="0" Text="{Binding TargetVectorX}"/>
                            <TextBox Name="textTargetVectorY" Grid.Row="1" Text="{Binding TargetVectorY}"/>
                            </Grid>
                    </GroupBox.Content>
                </GroupBox>

                
                <Button Content="{x:Static Properties:Languages.buttonFindClosestVector}" Margin="0,20,0,0" VerticalAlignment="Top"  Click="Button_CVP_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Height="5" ResizeDirection="Rows" Background="DarkGray" MouseDoubleClick="GridSplitter_MouseDoubleClick" ShowsPreview="True"/>
        <Grid Grid.Row="3">
            <RichTextBox Name="History" Background="LightGray" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextChanged="History_TextChanged" />
        </Grid>
    </Grid>
</UserControl>
