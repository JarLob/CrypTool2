<Window x:Class="LatticeCrypto.Views.LatticeCopyOrSaveSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:LatticeCrypto.Properties" Title="Speichern des aktuellen Gitters" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <GroupBox Header="Bitte auswählen:">
            <StackPanel Name="panelSelection">
                <RadioButton Content="Nur die Gitterbasis" Tag="0" IsChecked="True"/>
                <RadioButton Content="Nur die reduzierte Gitterbasis" Tag="1"/>
                <RadioButton Content="Alle Informationen zum aktuellen Gitter" Tag="2"/>
            </StackPanel>
        </GroupBox>
        <Grid >
            <Button Content="OK" Name="buttonOK" Click="ButtonOK_Click" Width="80" HorizontalAlignment="Right" Margin="0,0,100,0" />
            <Button Content="{x:Static Properties:Languages.buttonAbort}" Click="Button_Click" Width="80" HorizontalAlignment="Right"/>
        </Grid>
    </StackPanel>
</Window>
