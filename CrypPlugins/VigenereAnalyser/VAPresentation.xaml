<UserControl x:Class="Cryptool.VigenereAnalyser.VAPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" Margin="0">
    <Grid Height="Auto" Width="Auto" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Name="labelInputText" Grid.Row="0" VerticalAlignment="Top" Background="DarkGray" Margin="0" Padding="0">
            Derived keyword
        </Label>
        <TextBox Name="textBoxInputText" Grid.Row="1" AcceptsTab="True"
               TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
               AcceptsReturn="True" />
    </Grid>
</UserControl>
