<UserControl x:Class="Cryptool.Plugins.AutokorrelationFunction.AutocorrelationPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:custom="clr-namespace:Cryptool.PluginBase.Utils.Graphics.Diagrams.Histogram;assembly=CrypPluginBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="Grid" Width="300">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="scaler" ScaleX="1" ScaleY="1"/>
        </Grid.LayoutTransform>

        <TextBlock TextAlignment="Center" FontSize="20" Foreground="DarkBlue"  FontFamily="Academy" OpacityMask="Turquoise" Text="Shift values" Height="20" VerticalAlignment="Bottom"></TextBlock>

        <custom:HistogramChart Name="histogram" Margin="0,0,0,19">                

        </custom:HistogramChart>

    </Grid>
    
    
</UserControl>
