<UserControl x:Class="Cryptool.Plugins.PeerToPeer.P2PManagerQuickWatch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Azure"
    Height="300" Width="300">
    
    <Canvas>    
        <Grid Name="Grid" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Expander Grid.Row="0" Grid.Column="0" Header="Job Status Info" IsExpanded="True" FontSize="12" Background="Yellow">
            <Canvas Height="93">
                <Grid Name="JobGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Bottom" 
                           VerticalAlignment="Bottom" HorizontalContentAlignment="Center" Width="AUTO">Total Progress:</Label>
                        <TextBox Name="txtProgressInPercent" Grid.Row="1" Grid.Column="0" TextAlignment="Center"
                             IsReadOnly="True" TextWrapping="WrapWithOverflow" FontSize="14" FontWeight="Bold"
                             BorderThickness="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Background="Yellow"/>
                    </Grid>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" FontWeight="Bold" Background="Azure" VerticalAlignment="Top" Height="23" Width="AUTO">Total:</Label>
                    <TextBox Name="txtTotal" Grid.Row="0" Grid.Column="1" TextAlignment="Left" 
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" 
                     Height="23" FontSize="10" FontWeight="Bold" BorderThickness="1" />

                    <Label Grid.Row="1" Grid.Column="0" FontSize="10" Background="Bisque"  VerticalAlignment="Top" Height="23" Width="AUTO">In Progress:</Label>
                    <TextBox Name="txtInProgress" Grid.Row="1" Grid.Column="1" TextAlignment="Left"
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"
                     Height="23" FontSize="10" BorderThickness="1"/>

                    <Label Grid.Row="2" Grid.Column="0" FontSize="10" Background="Azure" VerticalAlignment="Top" Height="23" Width="AUTO">Left:</Label>
                    <TextBox Name="txtLeft" Grid.Row="2" Grid.Column="1" TextAlignment="Left"
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"
                     Height="23" FontSize="10" BorderThickness="1"/>

                    <Label Grid.Row="3" Grid.Column="0" FontSize="10" FontWeight="Bold" Background="Bisque" VerticalAlignment="Top" Height="23" Width="AUTO">Finished:</Label>
                    <TextBox Name="txtFinished" Grid.Row="3" Grid.Column="1" TextAlignment="Left"
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"
                     Height="23" FontSize="10" BorderThickness="1"/>

                </Grid>
            </Canvas>
            </Expander>

            <Expander Header="Global Top 10 List" IsExpanded="True" FontSize="12" Background="AliceBlue" Grid.Row="1" Grid.Column="0">
            <ListView Name="ListView" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ranking" DisplayMemberBinding="{Binding Path=Ranking}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Path=Value}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Path=Key}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Text" DisplayMemberBinding="{Binding Path=Text}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            </Expander>
            
            <Expander Header="Worker Info" IsExpanded="False" FontSize="12" Background="LimeGreen" Grid.Row="2" Grid.Column="0">
                <Grid Name="WorkerGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" Height="23">Free:</Label>
                    <TextBox Name="txtFreeWorker" Grid.Row="0" Grid.Column="1" TextAlignment="Left"
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"
                     Height="23" FontSize="10" BorderThickness="1"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" FontSize="10" Height="23">Busy:</Label>
                    <TextBox Name="txtBusyWorker" Grid.Row="1" Grid.Column="1" TextAlignment="Left"
                     IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalAlignment="Top"
                     Height="23" FontSize="10" BorderThickness="1"/>
                </Grid>
            </Expander>
        </Grid>
    </Canvas>
</UserControl>
