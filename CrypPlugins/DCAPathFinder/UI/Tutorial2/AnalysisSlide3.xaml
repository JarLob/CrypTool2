<UserControl x:Class="DCAPathFinder.UI.Tutorial2.AnalysisSlide3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCAPathFinder.UI.Tutorial2"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="600">
    <Grid Height="350" Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">
            <FlowDocument >
                <Paragraph TextAlignment="Center">
                    <Run Text="{Loc Tutorial2AnalysisSlide3Header}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <RichTextBox Grid.Row="1" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial2AnalysisSlide3Content1Run1}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run2}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run3}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run4}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run5}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run6}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run7}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run8}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run9}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run10}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run11}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run12}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content1Run13}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <RichTextBox Grid.Row="2" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial2AnalysisSlide3Content2Run1}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content2Run2}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content2Run3}"/><Run Text="{Loc Tutorial2AnalysisSlide3Content2Run4}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial2AnalysisSlide3Content2Run5}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <RichTextBox Grid.Row="3" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial2AnalysisSlide3Content3}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</UserControl>
