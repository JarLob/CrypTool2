<UserControl x:Class="DCAPathFinder.UI.Tutorial1.IntroductionSlide3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCAPathFinder.UI.Tutorial1"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="600">
    <Grid Height="350" Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">
            <FlowDocument >
                <Paragraph TextAlignment="Center">
                    <Run Text="{Loc Tutorial1IntroductionSlide3Header}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <RichTextBox Grid.Row="1" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial1IntroductionSlide3Content1Run1}" /><Run BaselineAlignment="Subscript" Text="{Loc Tutorial1IntroductionSlide3Content1Run2}" FontSize="10" /><Run Text="{Loc Tutorial1IntroductionSlide3Content1Run3}" /><Run BaselineAlignment="Subscript" Text="{Loc Tutorial1IntroductionSlide3Content1Run4}" FontSize="10" /><Run Text="{Loc Tutorial1IntroductionSlide3Content1Run5}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <Image Grid.Row="2" Source="/DCAPathFinder;component/images/m1XORkm2XORk.png"></Image>
        <RichTextBox Grid.Row="3" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial1IntroductionSlide3Content2}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Image Grid.Row="4" Source="/DCAPathFinder;component/images/c1XORc2.png"></Image>
        <RichTextBox Grid.Row="5" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Courier New" FontSize="12" Margin="10,10,10,0">
            <FlowDocument >
                <Paragraph>
                    <Run Text="{Loc Tutorial1IntroductionSlide3Content3}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        


        

        
        
    </Grid>
</UserControl>
