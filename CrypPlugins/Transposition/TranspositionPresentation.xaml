<UserControl x:Class="Transposition.TranspositionPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"
    SnapsToDevicePixels="True" 
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Height="Auto" Width="Auto">

    <Grid Name="mainGrid" Height="Auto" Width="Auto"   >

        <Grid.RenderTransform>
            <ScaleTransform x:Name="PinScaleTransform2" ScaleX="1" ScaleY="1" />
        </Grid.RenderTransform>

        <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Left">

            <WrapPanel Name="mywrap1" Orientation="Horizontal" Width="Auto" MaxWidth="160" Height="Auto" >

            </WrapPanel>
        </ScrollViewer>

        <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Right">

            <WrapPanel Name="mywrap2" Orientation="Horizontal" Width="Auto" MaxWidth="160" Height="Auto" >

            </WrapPanel>
        </ScrollViewer>


        <Grid Name="myGrid" MaxWidth="500" Height="Auto" Width="Auto"  HorizontalAlignment="Center" VerticalAlignment="Top">

        </Grid>


        <TextBox Visibility="Hidden" Name="textBox1"></TextBox>
        <TextBox  Name="textBox2" VerticalAlignment="Bottom"></TextBox>

    </Grid>
    
        

</UserControl>
