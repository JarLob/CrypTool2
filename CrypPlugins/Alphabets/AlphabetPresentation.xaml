<UserControl x:Class="Cryptool.Alphabets.AlphabetPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
  <Grid Width="Auto" Height="Auto">
    <Grid.RowDefinitions>
      <RowDefinition Height="43"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" Name="groupBoxDefaultAlphabet" Header="{Loc Current_Selected_Alphabet}">
      <TextBox TextAlignment="Left" IsReadOnly="True" Name="textBoxCurrentAlphabet"></TextBox>
    </GroupBox>

        <GroupBox Name="groupBoxAvailableAlphabets" Header="{Loc Available_Alphabets}" Grid.Row="1">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" Name="listViewAlphabets" ItemsSource="{Binding}" SelectionChanged="listViewAlphabets_SelectionChanged">
          <ListView.View>
            <GridView>
                            <GridViewColumn Width="60" Header="{Loc Default}" DisplayMemberBinding="{Binding Default}"/>
                            <GridViewColumn Width="150" Header="{Loc Name}" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Width="350" Header="{Loc Alphabet}" DisplayMemberBinding="{Binding Alphabet}"/>
            </GridView>
          </ListView.View>
        </ListView>
      </Grid>
    </GroupBox>

    <GroupBox Grid.Row="2" Name="groupBoxManagerAlphabet" Header="{Loc Manage_Alphabet}">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="136"/>
          <ColumnDefinition Width="341"/>
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="93" />
                </Grid.ColumnDefinitions>
        <StackPanel Margin="5,0,332,0" Grid.ColumnSpan="2">
                    <Label HorizontalAlignment="Left" Content="{Loc Name}"/>
          <TextBox TextChanged="textBoxAlphabet_TextChanged" Name="textBoxAlphabetName"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="15,0,0,0" Width="344" Height="48" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                    <Label HorizontalAlignment="Left" Content="{Loc Alphabet}"/>
          <Grid Width="414">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="210" />
              <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="44*" />
                        </Grid.ColumnDefinitions>
            <TextBox Name="textBoxAlphabet" TextChanged="textBoxAlphabet_TextChanged" MinWidth="150" HorizontalAlignment="Stretch" Margin="0,0,71,0" Grid.ColumnSpan="3" />
                    </Grid>
        </StackPanel>
                <Button VerticalAlignment="Bottom" Margin="23,0,0,0" HorizontalAlignment="Left" Name="buttonAddAlphabet" Content="{Loc Add}" Click="buttonAddAlphabet_Click" Grid.Column="3"></Button>
            </Grid>
    </GroupBox>
  </Grid>
</UserControl>
