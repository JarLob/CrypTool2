<UserControl x:Class="Cryptool.WEPAttacks.WEPAttacksPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" Margin="0">
    <Grid Height="Auto" Width="Auto" Margin="0" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Background="WhiteSmoke">
            <Label Name="labelAttack">No attack running.</Label>
            <Label Name="labelCollectedPackets">Sniffed packets: 0</Label>
            <Label Name="labelUsedIVs">Used packets: </Label>
        </StackPanel>
        
        <TextBox Name="textBox" Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
            
        </TextBox>
    </Grid>
</UserControl>
