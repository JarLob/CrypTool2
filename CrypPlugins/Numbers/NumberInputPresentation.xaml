<UserControl x:Class="Cryptool.Plugins.Numbers.NumberInputPresentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto" Margin="0" DataContext="{Binding}">
    <Grid Height="Auto" Width="Auto" Margin="0">
        <TextBox Name="TextBox"
                 AcceptsTab="True"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                 AcceptsReturn="True"
                 IsUndoEnabled="False"
                 PreviewTextInput="TextBox_PreviewTextInput" FontFamily="Courier New" FontSize="18" FontWeight="Bold" Foreground="#FF696666">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                    <Border Padding="2" BorderThickness="1" Background="#FFCBC8C8">
                        <Grid>
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
    </Grid>
</UserControl>
