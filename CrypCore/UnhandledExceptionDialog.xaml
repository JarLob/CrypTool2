<Window x:Class="Cryptool.Core.UnhandledExceptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unhandled Exception" Height="400" Width="600" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize" Icon="/CrypWin;component/images/remove32.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Label Content="Exception Name:" FontWeight="Bold" />
        <Label Name="ExceptionNameLabel" Content="-" Grid.Column="1" />
        <Label Content="Exception Message:" Grid.Row="1" FontWeight="Bold"/>
        <Label Name="ExceptionMessageLabel" Content="-" Grid.Column="1" Grid.Row="1" />

        <Label Content="Stacktrace:" Grid.Row="2" Grid.ColumnSpan="2" FontWeight="Bold"/>
        <TextBox Name="StackTraceBox" Grid.ColumnSpan="2" Grid.Row="3" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" />

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Content="Report this error" Margin="5" Click="Button_Click" />
            <Button Content="Close" Margin="5" IsDefault="True" Click="Button_Click_1" Grid.Column="2" Width="50" />
        </Grid>
    </Grid>
</Window>
