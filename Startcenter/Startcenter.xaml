<UserControl x:Class="Startcenter.Startcenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Startcenter="clr-namespace:Startcenter" mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Background="#FFEBEFF6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Image Source="/Startcenter;component/header_logo.png" />
        <Label Grid.Row="1">
            <Label.Content>
                <TextBlock>
                    Welcome to <Bold>CrypTool 2.0</Bold>! 
                    Add some introduction text here!
                </TextBlock>
            </Label.Content>
        </Label>

        <Grid Grid.Row="2">
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="BorderBrush" Value="LightSeaGreen"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#FFC8DCF5"/>
                    <Setter Property="Margin" Value="15"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>            
            
            <Border>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Startcenter:Buttons/>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFAEBBD4" HorizontalContentAlignment="Center" />

            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <Expander IsExpanded="True" Header="Last opened files:">
                        <Border>
                            <Startcenter:LastOpenedFilesList/>
                        </Border>
                    </Expander>
                    <Expander IsExpanded="True" Header="News:">
                        <Border>
                            <Label>
                                <Label.Content>
                                    <TextBlock TextWrapping="Wrap">
                                        Add some useful stuff here! For instance, an <Bold>RSS newsfeed</Bold> like in the VS2010 startcenter would be cool. 
                                        Unfortunately, CT2 doesn't have one.
                                    </TextBlock>
                                </Label.Content>                            
                            </Label>
                        </Border>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <CheckBox Content="Do not show this at startup!" Margin="5" VerticalAlignment="Center" />
            <Button Grid.Column="1" Content="Close" Margin="5" Padding="2" IsDefault="True" Width="50" />
        </Grid>
    </Grid>
</UserControl>
