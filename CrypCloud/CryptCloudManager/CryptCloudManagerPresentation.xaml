<UserControl x:Class="CryptCloud.Manager.CryptCloudManagerPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:screens="clr-namespace:CryptCloud.Manager.Screens"
             mc:Ignorable="d" d:DesignHeight="278" d:DesignWidth="652">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush RadiusX="1.1" RadiusY="2.8" Center="0.524,1.2" GradientOrigin="0.524,1.2">
                <GradientStop Color="#add3f5" Offset="0.0" />
                <GradientStop Color="#293955" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background> 

        <screens:Login x:Name="Login" Visibility="Visible"/>
        <screens:JobList x:Name="JobList" Visibility="Hidden"/>

        <Frame Name="Help" Source="DetailedDescription/Description.xaml" Visibility="Hidden"/>

    </Grid>
</UserControl>
