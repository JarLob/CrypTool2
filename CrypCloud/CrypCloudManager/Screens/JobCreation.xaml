<UserControl x:Class="CrypCloud.Manager.Screens.JobCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:CrypCloud.Manager.Screens.Converter"
             xmlns:viewModels="clr-namespace:CrypCloud.Manager.ViewModels"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModels:JobCreationVM />
    </UserControl.DataContext>

    <StackPanel Visibility="{Binding Path=IsActive, Converter={converter:BoolToVisibilityConverter}}" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
        
        <!-- errorBox -->
        <Border Visibility="{Binding Path=ErrorMessage, Converter={converter:StringNullOrEmptyToVisibilityConverter}}"
               CornerRadius="5" BorderThickness="3" BorderBrush="Gold">
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Khaki" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Name="Erroricon" Width="25" Grid.Row="1" Source="..\..\images\error.png"
                       HorizontalAlignment="Left" />
                <TextBlock Text="{Binding Path=ErrorMessage}" Foreground="Red" Margin="35,0,0,0" Grid.Row="1"
                           Grid.ColumnSpan="2" TextWrapping="Wrap" />
            </Grid>
        </Border>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="375" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="28" />
                <RowDefinition Height="28" />
                <RowDefinition Height="100" />
                <RowDefinition Height="28" />
            </Grid.RowDefinitions>

            <Label Content="{Loc _Name}" Grid.Row="0" Grid.Column="0" /> 
            <Label Content="{Loc _WorkspacePath}" Grid.Row="1" Grid.Column="0" />
            <Label Content="{Loc _Discription}" Grid.Row="2" Grid.Column="0" />
            
            <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Height="24" />
            <Grid Grid.Row="1" Grid.Column="1" Height="24">
                <TextBox Text="{Binding Path=LocalFilePath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,55,0" IsReadOnly="True" />
                <Button Content="..." Command="{Binding Path=SelectWorkspaceFromFilesystemCmd}" HorizontalAlignment="Right" Width="55" />
            </Grid>
            <TextBox Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" Grid.Row="2" Grid.Column="1" Margin="0,2,0,0" />

            <Button Content="{Loc _BackToList}" Command="{Binding Path=BackToListCmd}"
                    HorizontalAlignment="Left" Width="80" Grid.Row="3" Grid.Column="1" Height="24" />

            <Button Content="{Loc _Publish}" Command="{Binding Path=CreateNewJobCmd}"
                    HorizontalAlignment="Right" Width="80" Grid.Row="3" Grid.Column="1" Height="24" />
        </Grid>

    </StackPanel>
</UserControl>
