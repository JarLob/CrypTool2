<Window x:Class="CrypTool.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="337" Width="582" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>
        <Image Source="/CrypTool;component/Images/SplashScreen.png" Grid.RowSpan="2" />
        <Rectangle Grid.Row="1" Stroke="Black" Fill="Black"  Opacity="0.1" />
        <Rectangle Grid.Row="1" Stroke="Black" Fill="Black"  Opacity="0.15" Width="0" HorizontalAlignment="Left" Name="ProgressBar" />
        <TextBlock Grid.Row="1" Text="DefaultText" VerticalAlignment="Center" HorizontalAlignment="Center" Name="Description" Foreground="White" />
    </Grid>
</Window>
