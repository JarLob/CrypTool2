        <!--StatusBar-->
        <StatusBar Name="statusBar" DockPanel.Dock="Bottom" Height="20">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel LastChildFill="True"/>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <Separator Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly=dc:RibbonBar, ResourceId=StatusBarSeparator}}" DockPanel.Dock="Left"/>
            <StatusBarItem VerticalAlignment="Center" Height="25" Name="statusBarItem">
            </StatusBarItem>
        </StatusBar>
        
        <!--Left Panel-->
        <dc:OutlookBar DockPanel.Dock="Left" Header="Algorithms" DockPosition="Left">
            <dc:OutlookBar.Sections>
                <dc:OutlookSection Header="Classic Ciphers" Image="images/01-Classic-28x26.png" Name="Classic_Ciphers">
                    <StackPanel Name="ClassicPaneStack">

                    </StackPanel>
                </dc:OutlookSection>

                <dc:OutlookSection Header="Modern Ciphers" Image="images/02-Modern-28x26.png" Name="Modern_Ciphers">
                    <StackPanel Name="ModernPaneStack">

                    </StackPanel>
                </dc:OutlookSection>

                <dc:OutlookSection Header="Hash Functions" Image="images/03-Hash-28x26.png" Name="Hash_Functions">
                    <StackPanel Name="HashPaneStack">

                    </StackPanel>
                </dc:OutlookSection>

                <dc:OutlookSection Header="Cryptanalysis" Image="images/04-Analyse-28x26.png" Name="Cryptanalysis">
                    <StackPanel Name="AnalaysisPaneStack">

                    </StackPanel>
                </dc:OutlookSection>

                <dc:OutlookSection Header="Tools" Image="images/05-Tools-28x26.png" Name="Tools">
                    <StackPanel Name="ToolPaneStack">

                    </StackPanel>
                </dc:OutlookSection>

                <dc:OutlookSection Header="Editor Specific" Image="images/06-EditorSpec-28x26.png" Name="Editor_Specific">
                    <StackPanel Name="EditorPaneStack">
                        
                    </StackPanel>
                </dc:OutlookSection>

            </dc:OutlookBar.Sections>
        </dc:OutlookBar>
        
        <!--Right Panel-->
        <dc:OutlookBar DockPanel.Dock="Right" DockPosition="Right">
            <dc:OutlookBar.Sections>
                <dc:OutlookSection Header="Plugin Editor" Image="images/default.png" Name="Plug_Editor">
                    <StackPanel>
                        <dc:OdcExpander Header="Plugin Title here" Name="Plugin_Title">

                        </dc:OdcExpander>

                        <dc:OdcExpander Header="Miscellaneous" Name="Plugin_Msc">

                        </dc:OdcExpander>
                    </StackPanel>
                </dc:OutlookSection>
            </dc:OutlookBar.Sections>
        </dc:OutlookBar>
        
        <!--Editor-->
        <Grid Name="EditorSpace">
            <Image Height="150" HorizontalAlignment="Left" Margin="291,12,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="200" Source="images/SplashScreen.png" />
        </Grid>
    </DockPanel>
</dc:RibbonWindow>
