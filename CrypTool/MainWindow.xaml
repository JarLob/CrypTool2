<dc:RibbonWindow x:Class="CrypTool.MainWindow"
        xmlns:dc="clr-namespace:Odyssey.Controls;assembly=Odyssey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        IsGlassEnabled="True"
        Title="---------------------------FILL ME--------------------" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <dc:RibbonBar DockPanel.Dock="Top" Name="AppRibbon" IsRibbonVisible="False">
            <!--CrypTool Menu-->
            <dc:RibbonBar.ApplicationMenu>
                <dc:RibbonApplicationMenu MenuButtonImage="images/ctLogo.png">
                    <!--CrypTool Commands-->
                    <dc:RibbonApplicationMenuItem Header="New" Image="images/File32.png"/>
                    <dc:RibbonApplicationMenuItem Header="Open" Image="images/Open32.png"/>
                    <dc:RibbonApplicationMenuItem Header="Save As..." Image="images/Save32.png"/>
                    <dc:RibbonApplicationMenuItem Header="Exit CrypTool" Image="images/Exit.png"/>
                </dc:RibbonApplicationMenu>
            </dc:RibbonBar.ApplicationMenu>
            <!-- End CrypTool Menu -->
            
            <!--Define Quick Access Toolbar-->
            <dc:RibbonBar.QAToolBar>
                <dc:RibbonQAToolBar>
                    <dc:RibbonButton ToolTip="Play" SmallImage="images/play.png"/>
                    <dc:RibbonButton ToolTip="Pause" SmallImage="images/pause.png"/>
                    <dc:RibbonButton ToolTip="Stop" SmallImage="images/stop.png"/>
                </dc:RibbonQAToolBar>
            </dc:RibbonBar.QAToolBar>
            </dc:RibbonBar>

            <Border DockPanel.Dock="Top" CornerRadius="4,4,4,4" BorderBrush="#66000000" BorderThickness="0.5" Padding="5">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" MappingMode="RelativeToBoundingBox">
                    <GradientStop Color="#22444444" Offset="0" />
                    <GradientStop Color="#22EEEEEE" Offset="0.25" />
                    <GradientStop Color="#55555555" Offset="0.25" />
                    <GradientStop Color="#55DFEBEF" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0" Height="48">
                <StackPanel.LayoutTransform>
                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"></ScaleTransform>
                </StackPanel.LayoutTransform>
                <dc:RibbonButton LargeImage="images/File32.png" ToolTip="New File" Height="40"/>
                    <dc:RibbonButton LargeImage="images/Open32.png" ToolTip="Open File" Height="40"/>
                    <dc:RibbonButton LargeImage="images/Save32.png" ToolTip="Save File" Height="40"/>
                    <dc:RibbonSeparator Height="35"></dc:RibbonSeparator>
                    <dc:RibbonButton LargeImage="images/play.png" ToolTip="Start" Height="40"/>
                    <dc:RibbonButton LargeImage="images/pause.png" ToolTip="Pause" Height="40"/>
                    <dc:RibbonButton LargeImage="images/stop.png" ToolTip="Stop" Height="40"/>
                    <dc:RibbonButton LargeImage="images/undo.png" ToolTip="Undo" Height="40"/>
                    <dc:RibbonButton LargeImage="images/redo.png" ToolTip="Redo" Height="40"/>
                    <dc:RibbonButton LargeImage="images/Exit.png" Click="RibbonButton_Click"></dc:RibbonButton>

                    <!--<dc:RibbonDropDownButton Name="p2pButton" LargeImage="images/peer2peer-connect.png" ToolTip="Manages the integrated peer2peer connection"/>-->
                </StackPanel>
            </Border>

        <!--<dc:RibbonGroup Title="Demo mode" ToolTip="In demo mode a selected set of samples is repeatedly executed" Name="ribbonDemoMode">
                    <dc:RibbonButton LargeImage="images/test/play.png" Content="Play Demo" ToolTip="Select samples and start demo mode"/>

                    <dc:RibbonButton LargeImage="images/test/stop.png" Content="Stop Demo" ToolTip="Stop Demo Mode"/>
                </dc:RibbonGroup>-->



